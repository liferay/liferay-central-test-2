<definition>
	<command name="addCP">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="${portletName}" />
		</execute>

		<execute action="SitetemplatesCP#assertClick" locator-key1="ADD" value1="Add" />

		<execute action="SitetemplatesAddCP#type" locator-key1="NAME_FIELD" value1="${siteTemplateName}" />

		<if>
			<equals arg1="${siteTemplateActive}" arg2="No" />
			<then>
				<execute action="SitetemplatesAddCP#uncheck" locator-key1="ACTIVE_CHECKBOX" />
			</then>
			<else>
				<execute action="SitetemplatesAddCP#check" locator-key1="ACTIVE_CHECKBOX" />
			</else>
		</if>

		<execute action="SitetemplatesAddCP#assertClick" locator-key1="SAVE_BUTTON" value1="Save" />
		<execute action="SitetemplatesCP#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute action="SitetemplatesCP#assertTextEquals" locator-key1="SITE_TEMPLATE_TABLE_NAME_3" value1="${siteTemplateName}" />
		<execute action="SitetemplatesCP#assertTextEquals" locator-key1="SITE_TEMPLATE_TABLE_ACTIVE_3" value1="${siteTemplateActive}" />
	</command>

	<command name="editCP">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="${portletName}" />
		</execute>

		<execute action="SitetemplatesCP#assertTextEquals" locator-key1="SITE_TEMPLATE_TABLE_NAME_3" value1="${siteTemplateName}" />
		<execute action="SitetemplatesCP#assertClick" locator-key1="SITE_TEMPLATE_TABLE_ACTIONS_3" value1="Actions" />
		<execute action="SitetemplatesCP#assertClick" locator-key1="SITE_TEMPLATE_MENULIST_EDIT" value1="Edit" />

		<execute action="SitetemplatesEditCP#type" locator-key1="NAME_FIELD" value1="${siteTemplateName} Edit" />

		<if>
			<equals arg1="${siteTemplateActiveNew}" arg2="No" />
			<then>
				<execute action="SitetemplatesAddCP#uncheck" locator-key1="ACTIVE_CHECKBOX" />
			</then>
			<else>
				<execute action="SitetemplatesAddCP#check" locator-key1="ACTIVE_CHECKBOX" />
			</else>
		</if>

		<execute action="SitetemplatesEditCP#assertTextEquals" locator-key1="OPEN_SITE_TEMPLATE" value1="Open site template" />
		<execute action="SitetemplatesEditCP#assertClick" locator-key1="SAVE_BUTTON" value1="Save" />

		<execute action="SitetemplatesCP#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute action="SitetemplatesCP#assertTextEquals" locator-key1="SITE_TEMPLATE_TABLE_NAME_3" value1="${siteTemplateName} Edit" />
		<execute action="SitetemplatesCP#assertTextEquals" locator-key1="SITE_TEMPLATE_TABLE_ACTIVE_3" value1="${siteTemplateActiveNew}" />
	</command>

	<command name="tearDownCP">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="${portletName}" />
		</execute>

		<while>
			<condition action="SitetemplatesCP#isElementPresent" locator-key1="SITE_TEMPLATE_TABLE_ACTIONS_3" />
			<then>
				<execute action="SitetemplatesCP#assertClick" locator-key1="SITE_TEMPLATE_TABLE_ACTIONS_3" value1="Actions" />
				<execute action="SitetemplatesCP#assertClick" locator-key1="SITE_TEMPLATE_MENULIST_DELETE" value1="Delete" />
				<execute action="SitetemplatesCP#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete this? It will be deleted immediately." />
				<execute action="SitetemplatesCP#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully."/>
			</then>
		</while>
	</command>
</definition>