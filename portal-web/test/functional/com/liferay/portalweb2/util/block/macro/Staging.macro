<definition>
	<command name="activateStagingCP">
		<execute action="CPSitesEdit#assertClick" locator-key1="MENU_STAGING" value1="Staging" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_LOCAL_LIVE" />

		<if>
			<equals arg1="${pageVersioningEnabled}" arg2="true" />
			<then>
				<execute action="CPSitesEdit#check" locator-key1="STAGING_ENABLED_ON_PUBLIC_PAGES_CHECKBOX" />
				<execute action="CPSitesEdit#check" locator-key1="STAGING_ENABLED_ON_PRIVATE_PAGES_CHECKBOX" />
			</then>
		</if>

		<execute action="CPSitesEdit#check" locator-key1="STAGING_ACCOUNT_SETTINGS_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_APPLICATION_DISPLAY_TEMPLATES_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_BLOGS_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_BOOKMARKS_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_DOCUMENTS_AND_MEDIA_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_DYNAMIC_DATA_LISTS_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_MESSAGE_BOARDS_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_MOBILE_DEVICE_FAMILIES_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_POLLS_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_WEB_CONTENT_CHECKBOX" />
		<execute action="CPSitesEdit#check" locator-key1="STAGING_WIKI_CHECKBOX" />
		<execute action="CPSitesEdit#assertClick" locator-key1="MENU_SAVE" value1="Save" />
		<execute action="CPSitesEdit#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to activate local staging for Liferay?" />
		<execute action="CPSitesEdit#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute action="CPSitesEdit#assertTextEquals" locator-key1="HEADER" value1="${siteName} (Staging)" />
	</command>

	<command name="deactivateStagingCP">
		<if>
			<condition action="CPSitesEdit#isTextEqual" locator-key1="HEADER" value1="${siteName} (Staging)" />
			<then>
				<execute action="CPSitesEdit#assertClick" locator-key1="MENU_STAGING" value1="Staging" />
				<execute action="CPSitesEdit#check" locator-key1="STAGING_NONE" />
				<execute action="CPSitesEdit#assertClick" locator-key1="MENU_SAVE" value1="Save" />
				<execute action="CPSitesEdit#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to deactivate staging for Liferay?" />
				<execute action="CPSitesEdit#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</if>

		<execute action="CPSitesEdit#assertTextEquals" locator-key1="HEADER" value1="${siteName}" />
	</command>

	<command name="publishToLiveNowPG">
		<execute action="StagingPG#click" locator-key1="STAGING_DROP_DOWN_BUTTON" />
		<execute action="StagingPG#assertClick" locator-key1="STAGING_MENULIST_PUBLISH_TO_LIVE_NOW" value1="Publish to Live" />

		<execute action="StagingPublishToLiveNowPG#selectFrame" locator-key1="PUBLISH_TO_LIVE_IFRAME" />
		<execute action="StagingPublishToLiveNowPG#check" locator-key1="DATE_NOW" />
		<execute action="StagingPublishToLiveNowPG#check" locator-key1="ALL_APPLICATIONS" />
		<execute action="StagingPublishToLiveNowPG#check" locator-key1="ALL_CONTENT" />
		<execute action="StagingPublishToLiveNowPG#assertClick" locator-key1="PUBLISH_BUTTON" value1="Publish" />
		<execute action="StagingPublishToLiveNowPG#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to publish these pages?" />
		<execute action="StagingPublishToLiveNowPG#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute action="StagingPublishToLiveNowPG#assertTextEquals" locator-key1="PUBLICATION_TABLE_USER_STATUS" value1="Successful" />
		<execute action="StagingPublishToLiveNowPG#selectFrameTop" locator-key1="PUBLISH_TO_LIVE_IFRAME_TOP" value1="relative=top" />
	</command>
</definition>