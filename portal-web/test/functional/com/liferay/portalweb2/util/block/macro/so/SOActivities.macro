			<then>
				<execute action="SOActivities#assertTextEquals" locator-key1="ACTIVITIES_ACTION" value1="Reposted a microblog entry from ${microblogsEntryAuthorName}." />
			</then>
			<elseif>
				<equals arg1="${microblogsEntryAuthorName}" arg2="${currentUser}" />
