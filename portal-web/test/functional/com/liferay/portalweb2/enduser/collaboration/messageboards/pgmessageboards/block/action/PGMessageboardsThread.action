<definition>
	<command name="assertClick">
		<case locator-key1="MESSAGE_SPLIT_THREAD">
			<execute function="AssertClick#assertTextClickAtAndWait" />
		</case>
	</command>

	<command name="click">
		<case comparator="startsWith" locator-key1="MESSAGE_EDIT_">
			<execute function="Click#textClickAtAndWait" value1="Edit" />
		</case>

		<case comparator="startsWith" locator-key1="MESSAGE_REPLY_">
			<execute function="Click#textClickAtAndWait" value1="Reply" />
		</case>
	</command>
</definition>