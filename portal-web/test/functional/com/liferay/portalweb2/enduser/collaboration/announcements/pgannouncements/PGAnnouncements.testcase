<definition component-name="portal-collaboration">
	<var name="pageName" value="Announcements Page" />
	<var name="portletName" value="Announcements" />

	<set-up>
		<execute macro="User#firstLoginPG" />

		<execute macro="Page#addPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="${portletName}" />
		</execute>
	</set-up>

	<tear-down>
		<execute macro="AnnouncementsEntry#tearDownPG" />

		<execute macro="Page#tearDownPG" />
	</tear-down>

	<command name="AddAnnouncementsEntry" priority="5">
		<var name="distributionScope" value="General" />
		<var name="entryContent" value="Announcements Entry Content" />
		<var name="entryTitle" value="Announcements Entry Title" />
		<var name="entryURL" value="http://www.liferay.com" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="AnnouncementsEntry#addPG">
			<var name="distributionScope" value="${distributionScope}" />
			<var name="entryContent" value="${entryContent}" />
			<var name="entryTitle" value="${entryTitle}" />
			<var name="entryURL" value="${entryURL}" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="AnnouncementsEntry#viewPG">
			<var name="distributionScope" value="${distributionScope}" />
			<var name="entryContent" value="${entryContent}" />
			<var name="entryTitle" value="${entryTitle}" />
			<var name="entryURL" value="${entryURL}" />
		</execute>
	</command>

	<command name="AddAnnouncementsEntryFutureDate" priority="5">
		<var name="distributionScope" value="General" />
		<var name="entryContent" value="Announcements Entry Content" />
		<var name="entryTitle" value="Announcements Entry Title" />
		<var name="entryURL" value="http://www.liferay.com" />

		<execute macro="Page#addPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Announcements" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGAnnouncements#click" locator-key1="NAVIGATION_MANAGE_ENTRIES" />

		<execute action="PGAnnouncementsManageentries#select" locator-key1="DISTRIBUTION_SCOPE_SELECT" value1="${distributionScope}" />
		<execute action="PGAnnouncementsManageentries#click" locator-key1="ADD_ENTRY_BUTTON" />

		<execute action="PGAnnouncementsAddentry#type" locator-key1="TITLE_FIELD" value1="${entryTitle}" />
		<execute action="PGAnnouncementsAddentry#type" locator-key1="URL_FIELD" value1="${entryURL}" />
		<execute action="PGAnnouncementsAddentry#type" locator-key1="CONTENT_FIELD" value1="${entryContent}" />

		<execute action="PGAnnouncementsAddentry#uncheck" locator-key1="DISPLAY_DATE_DISPLAY_IMMEDIATELY_CHECKBOX" />

		<var name="displayDateHour" locator="//input[@id='_84_displayDateHour']" attribute="value" />
		<var name="displayDateHourLength" value="${displayDateHour?length()}" />

		<if>
			<equals arg1="${displayDateHourLength}" arg2="1" />
			<then>
				<var name="displayDateHour" value="0${displayDateHour}" />
			</then>
		</if>

		<var name="displayDateAMPM" locator="//input[@id='_84_displayDateAmPm']" attribute="value" />
		<var name="displayDateAMPM" value="${displayDateAMPM?replace('0', 'AM')}" />
		<var name="displayDateAMPM" value="${displayDateAMPM?replace('1', 'PM')}" />

		<var name="displayDateMinute" locator="//input[@id='_84_displayDateMinute']" attribute="value" />
		<var name="displayDateMinuteFuture" value="${displayDateMinute?increment()}" />
		<var name="displayDateMinuteFuture" value="${displayDateMinuteFuture?increment()}" />
		<var name="displayDateMinuteFutureLength" value="${displayDateMinuteFuture?length()}" />

		<if>
			<equals arg1="${displayDateMinuteFutureLength}" arg2="1" />
			<then>
				<var name="displayDateMinuteFuture" value="0${displayDateMinuteFuture}" />
			</then>
		</if>

		<var name="displayDate" value="${displayDateHour}:${displayDateMinuteFuture} ${displayDateAMPM}" />

		<execute action="PGAnnouncementsAddentry#type" locator-key1="DISPLAY_DATE_TIME_INPUT" value1="${displayDate}" />
		<execute action="PGAnnouncementsAddentry#assertClick" locator-key1="SAVE_BUTTON" value1="Save" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGAnnouncements#assertTextNotPresent" value1="${entryTitle}" />
		<execute action="PGAnnouncements#pause" locator1="120000" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="AnnouncementsEntry#viewPG">
			<var name="distributionScope" value="${distributionScope}" />
			<var name="entryContent" value="${entryContent}" />
			<var name="entryTitle" value="${entryTitle}" />
			<var name="entryURL" value="${entryURL}" />
		</execute>
	</command>

	<command name="AddAnnouncementsEntryPastExpirationDate" priority="5">
		<var name="distributionScope" value="General" />
		<var name="entryContent" value="Announcements Entry Content" />
		<var name="entryTitle" value="Announcements Entry Title" />
		<var name="entryURL" value="http://www.liferay.com" />
		<var name="expirationDate" value="12/31/2013" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="AnnouncementsEntry#addPG">
			<var name="distributionScope" value="${distributionScope}" />
			<var name="entryContent" value="${entryContent}" />
			<var name="entryTitle" value="${entryTitle}" />
			<var name="entryURL" value="${entryURL}" />
			<var name="expirationDate" value="${expirationDate}" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGAnnouncements#assertTextNotPresent" value1="${entryTitle}" />
		<execute action="PGAnnouncements#click" locator-key1="NAVIGATION_MANAGE_ENTRIES" />

		<execute action="PGAnnouncementsManageentries#select" locator-key1="DISTRIBUTION_SCOPE_SELECT" value1="${distributionScope}" />

		<var name="key_entryTitle" value="${entryTitle}" />

		<execute action="PGAnnouncementsManageentries#assertTextEquals" locator-key1="ENTRY_TABLE_TITLE" value1="${entryTitle}" />
		<execute action="PGAnnouncementsManageentries#assertTextEquals" locator-key1="ENTRY_TABLE_TYPE" value1="${distributionScope}" />
	</command>

	<command name="AddAnnouncementsEntryPriorityImportant" priority="5">
		<var name="distributionScope" value="General" />
		<var name="entryContent" value="Announcements Entry Content" />
		<var name="entryTitle" value="Announcements Entry Title" />
