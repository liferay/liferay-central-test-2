<definition component-name="portal-workflow">
	<property name="portlet.plugins.includes" value="kaleo-designer-portlet,kaleo-forms-portlet" />
	<property name="web.plugins.includes" value="kaleo-web" />
	<property name="testray.main.component.name" value="Workflow" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute macro="KaleoFormsAdmin#tearDownProcessCP" />
	</tear-down>

	<command name="AddProcessPredefined" priority="5">
		<var name="processName" value="Kaleo Forms Process Predefined" />

		<execute macro="Page#gotoContentCP">
			<var name="portletName" value="Kaleo Forms Admin" />
		</execute>

		<execute macro="KaleoFormsAdmin#addProcessCP" />

		<execute macro="KaleoFormsAdmin#addProcessDetailsCP">
			<var name="processName" value="${processName}" />
		</execute>

		<execute macro="KaleoFormsAdmin#nextCmd" />

		<execute macro="KaleoFormsAdmin#addProcessChooseCP">
			<var name="fieldsDefinitionName" value="To Do" />
		</execute>

		<execute macro="KaleoFormsAdmin#nextCmd" />

		<execute macro="KaleoFormsAdmin#addProcessChooseCP">
			<var name="workflowDefinition" value="Single Approver" />
		</execute>

		<execute macro="KaleoFormsAdmin#nextCmd" />

		<execute macro="KaleoFormsAdmin#assignCreatedFormCP">
			<var name="formName" value="Created Task Form" />
		</execute>

		<execute macro="KaleoFormsAdmin#saveProcessCmd" />

		<execute macro="KaleoFormsAdmin#viewProcessCP">
			<var name="processName" value="${processName}" />
		</execute>
	</command>
</definition>