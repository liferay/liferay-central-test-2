		<execute macro="Page#gotoMyAccount">
			<var name="portletName" value="My Workflow Tasks" />
		</execute>

		<execute macro="Workflow#approveTaskByDetails">
			<var name="ddlDataDefinitionName" value="${ddlDataDefinitionName}" />
