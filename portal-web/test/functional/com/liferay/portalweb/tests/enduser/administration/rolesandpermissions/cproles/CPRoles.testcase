<definition component-name="portal-user-management-and-portal-configuration">
	<property name="testray.main.component.name" value="Administration" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute macro="User#firstLoginPG" />

		<execute macro="Role#tearDownCP" />
	</tear-down>

	<command name="AddOrganizationRole" priority="4">
		<var name="roleName" value="Roles Orgrole Name" />
		<var name="roleType" value="Organization" />

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Roles" />
		</execute>

		<execute macro="Role#addCP">
			<var name="roleName" value="${roleName}" />
			<var name="roleType" value="${roleType}" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Roles" />
		</execute>

		<execute macro="Role#viewCP">
			<var name="roleName" value="${roleName}" />
			<var name="roleType" value="${roleType}" />
		</execute>
	</command>

	<command name="AddRegularRole" priority="4">
		<var name="roleName" value="Roles Regrole Name" />
		<var name="roleType" value="Regular" />

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Roles" />
		</execute>

		<execute macro="Role#addCP">
			<var name="roleName" value="${roleName}" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Roles" />
		</execute>

		<execute macro="Role#viewCP">
			<var name="roleName" value="${roleName}" />
			<var name="roleType" value="${roleType}" />
		</execute>
	</command>

	<command name="AddSiteRole" priority="4">
		<var name="roleName" value="Roles Siterole Name" />
		<var name="roleType" value="Site" />

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Roles" />
		</execute>

		<execute macro="Role#addCP">
			<var name="roleName" value="${roleName}" />
			<var name="roleType" value="${roleType}" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Roles" />
		</execute>

		<execute macro="Role#viewCP">
			<var name="roleName" value="${roleName}" />
			<var name="roleType" value="${roleType}" />
		</execute>
	</command>

	<command name="DeleteRegularRole" priority="4">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="Roles" />
		</execute>

		<execute macro="Role#addCP">
			<var name="roleName" value="Roles Regrole Name" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Roles" />
		</execute>

		<execute macro="Role#deleteCP">
			<var name="roleName" value="Roles Regrole Name" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Roles" />
		</execute>

		<execute macro="Role#viewDefaultCP">
			<var name="roleName" value="Roles Regrole Name" />
		</execute>
	</command>
</definition>