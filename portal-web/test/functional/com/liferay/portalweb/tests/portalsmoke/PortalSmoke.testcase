<definition component-name="portal-smoke">
	<property name="testray.main.component.name" value="Smoke" />

	<set-up>
		<execute macro="SignIn#signInTestSetup" />
	</set-up>

	<tear-down>
		<execute macro="Page#tearDownPG" />

		<execute macro="WebContent#tearDownCP" />
	</tear-down>

	<command description="Ensure that the super admin can add pages, add portlets, and navigate to the product menu." name="Smoke" priority="5">
		<property name="portal.acceptance" value="true" />

		<execute macro="Smoke#viewWelcomePage" />

		<execute macro="Smoke#runSmoke" />
	</command>
</definition>