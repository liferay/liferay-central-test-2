<definition component-name="portal-plugins-osgi">
	<property name="plugins.deployment.type" value="osgi" />
	<property name="testray.main.component.name" value="Plugin Installer" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<command name="131ColumnsLayouttplSmoke" priority="4">
		<property name="layouttpl.plugins.includes" value="1-3-1-columns-layouttpl" />

		<var name="appName" value="1-3-1 Columns Layout" />

		<execute macro="Page#gotoCP">
			<var name="portletName" value="App Manager" />
		</execute>

		<execute function="AssertTextPresent#assertTextPresent" value1="${appName}" />

		<execute function="AntCommand#antCommand" locator1="build-test.xml" value1="remove-plugin -Dplugin.name=1-3-1-columns-layouttpl" />
	</command>
</definition>