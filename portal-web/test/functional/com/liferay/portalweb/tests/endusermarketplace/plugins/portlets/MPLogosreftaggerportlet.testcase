<definition component-name="marketplace-plugins-logos-reftagger-portlet">
	<property name="testray.main.component.name" value="Plugin Installer" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<command name="LogosRefTaggerPortletSmoke" priority="4">
		<property name="portlet.plugins.includes" value="logos-reftagger-portlet" />

		<var name="appName" value="Logos RefTagger" />

		<execute macro="ProductMenu#gotoControlPanelApps">
			<var name="portlet" value="App Manager" />
		</execute>

		<execute macro="AppManager#uninstallAppCP">
			<var name="appName" value="${appName}" />
		</execute>

		<execute macro="ProductMenu#gotoControlPanelApps">
			<var name="portlet" value="App Manager" />
		</execute>

		<execute macro="AppManager#viewUninstallAppCP">
			<var name="appName" value="${appName}" />
		</execute>
	</command>
</definition>