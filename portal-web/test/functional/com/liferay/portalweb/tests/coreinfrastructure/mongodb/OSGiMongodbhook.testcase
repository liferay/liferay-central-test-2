<definition component-name="portal-plugins-osgi">
	<property name="plugins.deployment.type" value="osgi" />
	<property name="testray.main.component.name" value="MongoDB" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<command name="MongoDBHookSmoke" priority="4">
		<property name="hook.plugins.includes" value="mongodb-hook" />

		<var name="appName" value="MongoDB Expando Adapter" />

		<execute macro="ProductMenu#gotoControlPanelApps">
			<var name="portlet" value="App Manager" />
		</execute>

		<execute function="AssertTextPresent#assertTextPresent" value1="${appName}" />

		<execute function="AntCommand#antCommand" locator1="build-test.xml" value1="remove-plugin -Dplugin.name=mongodb-hook" />
	</command>
</definition>