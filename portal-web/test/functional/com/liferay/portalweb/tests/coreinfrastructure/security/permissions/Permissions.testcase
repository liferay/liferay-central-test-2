<definition component-name="portal-security">
	<property name="testray.main.component.name" value="Permissions" />

	<set-up>
		<var method="TestPropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="SignIn#signInPortalInstanceSetUp" />
			</then>
		</if>

		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute macro="User#firstLoginPG" />

		<execute macro="Page#tearDownPG" />
	</tear-down>

	<command name="ViewBlogsPortletAsGuestPG" priority="4">
		<execute macro="Page#addPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Blogs" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="Blogs#viewControlsPG" />

		<execute macro="User#logoutPG" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="BlogsConfiguration#viewNoPermissionPG" />
	</command>
</definition>