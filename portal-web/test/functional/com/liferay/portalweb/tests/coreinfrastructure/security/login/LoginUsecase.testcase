<definition component-name="portal-security">
	<property name="portal.release" value="true" />
	<property name="portal.upstream" value="true" />
	<property name="testray.main.component.name" value="Security" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<var method="TestPropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="User#firstLoginPG" />
			</else>
		</if>
	</tear-down>

	<command name="LoginPortalWithSessionEnabled" priority="4">
		<description message="This is a use case for LPS-48653." />
		<property name="custom.properties" value="session.enable.url.with.session.id=true" />

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Sign In" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="SignIn#signIn" />

		<execute macro="Smoke#viewWelcomePage" />
	</command>

	<command name="SessionTimeout" priority="4">
		<property name="web.xml.timeout" value="2" />

		<execute macro="Navigator#openURL" />

		<execute function="AssertElementNotPresent" locator1="Home#ERROR_MESSAGE_EXPIRED_SESSION" />

		<execute function="AssertElementNotPresent" locator1="UserBar#USER_SIGN_IN" />

		<execute function="Pause" locator1="120000" />
		<execute function="AssertTextEquals" locator1="Home#ERROR_MESSAGE_EXPIRED_SESSION" value1="DangerWarning! Due to inactivity, your session has expired. Please save any data you may have entered before refreshing the page." />
		<execute function="Refresh" />

		<execute function="AssertElementPresent" locator1="UserBar#USER_SIGN_IN" value1="Sign In" />

		<execute macro="User#loginPG">
			<var name="rememberMeChecked" value="true" />
		</execute>

		<execute macro="Navigator#openURL" />

		<execute function="Pause" locator1="120000" />
		<execute function="AssertElementNotPresent" locator1="Home#ERROR_MESSAGE_EXPIRED_SESSION" />
		<execute function="Refresh" />

		<execute macro="Smoke#viewWelcomePage">
			<var name="userFirstName" value="Test" />
			<var name="userLastName" value="Test" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="User#loginPG" />

		<execute macro="Navigator#openURL" />

		<execute function="AssertElementNotPresent" locator1="Home#ERROR_MESSAGE_EXPIRED_SESSION" />

		<execute function="AssertElementNotPresent" locator1="UserBar#USER_SIGN_IN" />

		<execute function="Pause" locator1="120000" />
		<execute function="AssertTextEquals" locator1="Home#ERROR_MESSAGE_EXPIRED_SESSION" value1="DangerWarning! Due to inactivity, your session has expired. Please save any data you may have entered before refreshing the page." />
		<execute function="Refresh" />

		<execute function="AssertElementPresent" locator1="UserBar#USER_SIGN_IN" value1="Sign In" />
	</command>
</definition>