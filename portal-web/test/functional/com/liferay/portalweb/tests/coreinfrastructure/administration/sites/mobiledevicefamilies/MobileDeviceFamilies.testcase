<definition component-name="portal-mobile-device-rules">
	<property name="portal.release" value="true" />
	<property name="testray.main.component.name" value="Mobile Device Rules" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<var method="TestPropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="PortalInstances#tearDownCP" />

				<execute macro="Page#tearDownPG" />
			</else>
		</if>
	</tear-down>

	<command name="AssertMobileDeviceRuleActionOnSitePage" priority="5">
		<execute macro="ProductMenu#gotoSitesConfiguration">
			<var name="portlet" value="Mobile Device Families" />
		</execute>

		<execute macro="MobileDevice#addCP">
			<var name="mobileDeviceFamilyName" value="Mobile Device Family Name" />
		</execute>

		<execute macro="ProductMenu#gotoSitesConfiguration">
			<var name="portlet" value="Mobile Device Families" />
		</execute>

		<execute macro="MobileDevice#addRuleCP">
			<var name="deviceType" value="Any" />
			<var name="mobileDeviceFamilyName" value="Mobile Device Family Name" />
			<var name="operatingSystem" value="Any Operating System" />
			<var name="ruleName" value="Rule Name" />
		</execute>

		<execute macro="Page#add">
			<var name="pageName" value="Mobile Device Family Test Page" />
		</execute>

		<execute macro="SitePageNavigator#gotoEditPage">
			<var name="page" value="Mobile Device Family Test Page" />
		</execute>

		<execute macro="Navigator#gotoNavTab">
			<var name="navTab" value="Advanced" />
		</execute>

		<execute macro="Panel#expandPanel">
			<var name="panelHeading" value="Mobile Device Rules" />
		</execute>

		<execute macro="Page#disableMobileDeviceRulesAreInheritedFromPublicPages" />

		<execute macro="Page#selectMobileDeviceFamily">
			<var name="deviceFamilyName" value="Mobile Device Family Name" />
		</execute>

		<execute macro="Page#manageDeviceFamilyActions">
			<var name="actionName" value="Mobile Device Family Test Action" />
			<var name="actionType" value="Redirect to Site" />
			<var name="pageName" value="Welcome" />
			<var name="siteName" value="Liferay" />
		</execute>

		<execute macro="PortletEntry#save" />

		<execute macro="Navigator#openURL" />

		<execute macro="MobileDevice#assertRedirectActionPG">
			<var name="pageName" value="Mobile Device Family Test Page" />
			<var name="redirectPageName" value="Welcome" />
		</execute>
	</command>
</definition>