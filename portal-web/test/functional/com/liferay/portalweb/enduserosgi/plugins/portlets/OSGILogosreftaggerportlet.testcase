<definition component-name="portal-plugins-osgi">
	<property name="deploy.plugins.osgi" value="true" />
	<property name="testray.main.component.name" value="Plugin Installer" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<command name="LogosRefTaggerPortletSmoke" priority="5">
		<property name="portlet.plugins.includes" value="logos-reftagger-portlet" />

		<var name="appName" value="Logos RefTagger" />

		<execute macro="Page#gotoCP">
			<var name="portletName" value="App Manager" />
		</execute>

		<execute action="CPAppmanager#assertTextPresent" value1="${appName}" />

		<execute action="CPAppmanager#antCommand" locator1="build-test.xml" value1="remove-plugins-osgi -Dplugin.name=logos-reftagger-portlet" />
	</command>
</definition>