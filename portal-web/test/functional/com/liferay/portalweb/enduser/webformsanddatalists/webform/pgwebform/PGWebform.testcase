<definition component-name="portal-web-forms-and-data-lists">
	<property name="portlet.plugins.includes" value="web-form-portlet" />
	<property name="testray.main.component.name" value="Web Forms and Data Lists" />

	<var name="pageName" value="Web Form Test Page" />
	<var name="portletName" value="Web Form" />

	<set-up>
		<execute macro="User#firstLoginPG" />

		<execute macro="Page#addPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="${portletName}" />
		</execute>
	</set-up>

	<tear-down>
		<execute macro="Page#tearDownPG" />
	</tear-down>

	<command name="EditAndSendWebFormWithRequiredCheckbox" priority="4">
		<execute macro="WebForm#viewPG">
			<var name="formInformationDescription" value="Your input is valuable to us. Please send us your suggestions." />
			<var name="formInformationTitle" value="Suggestions" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="WebFormPortlet#configureSetupFormFieldsPG">
			<var name="formInformationDescription" value="Please let us know what you think!" />
			<var name="formInformationTitle" value="Feed Back" />
		</execute>

		<execute macro="WebFormPortlet#editField">
			<var name="fieldName" value="Name" />
			<var name="newFieldName" value="Your Name" />
		</execute>

		<execute macro="WebFormPortlet#editField">
			<var name="fieldName" value="Rating" />
			<var name="fieldType" value="Check Box" />
			<var name="newFieldName" value="Rate Us!" />
		</execute>

		<execute macro="WebFormPortlet#editField">
			<var name="fieldName" value="Comments" />
			<var name="newFieldName" value="Additional Comments" />
		</execute>

		<execute macro="WebFormPortlet#saveConfiguration" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="WebForm#viewPG">
			<var name="formInformationDescription" value="Please let us know what you think!" />
			<var name="formInformationTitle" value="Feed Back" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Your Name" />
			<var name="fieldType" value="Text" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Rate Us!" />
			<var name="fieldType" value="Check Box" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Additional Comments" />
			<var name="fieldType" value="Text Box" />
		</execute>

		<execute macro="WebForm#populateFormField">
			<var name="fieldName" value="Your Name" />
			<var name="fieldType" value="Text" />
			<var name="formFieldValue" value="New Name" />
		</execute>

		<execute macro="WebForm#populateFormField">
			<var name="fieldName" value="Rate Us!" />
			<var name="fieldType" value="Check Box" />
		</execute>

		<execute macro="WebForm#populateFormField">
			<var name="fieldName" value="Additional Comments" />
			<var name="fieldType" value="Text Box" />
			<var name="formFieldValue" value="Page Objects + Hashi = Poshi" />
		</execute>

		<execute macro="WebForm#sendPG" />
	</command>

	<command name="EditWebForm" priority="5">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="WebForm#viewPG">
			<var name="formInformationDescription" value="Your input is valuable to us. Please send us your suggestions." />
			<var name="formInformationTitle" value="Suggestions" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Name" />
			<var name="fieldType" value="Text" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Rating" />
			<var name="fieldType" value="Select" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Comments" />
			<var name="fieldType" value="Text Box" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="WebFormPortlet#configureSetupFormFieldsPG">
			<var name="formInformationDescription" value="Please let us know what you think!" />
			<var name="formInformationTitle" value="Feed Back" />
		</execute>

		<execute macro="WebFormPortlet#editField">
			<var name="fieldName" value="Name" />
			<var name="newFieldName" value="Your Name" />
		</execute>

		<execute macro="WebFormPortlet#editField">
			<var name="fieldName" value="Rating" />
			<var name="fieldType" value="Check Box" />
			<var name="newFieldName" value="Rate Us!" />
		</execute>

		<execute macro="WebFormPortlet#editField">
			<var name="fieldName" value="Comments" />
			<var name="newFieldName" value="Additional Comments" />
		</execute>

		<execute macro="WebFormPortlet#saveConfiguration" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="WebForm#viewPG">
			<var name="formInformationDescription" value="Please let us know what you think!" />
			<var name="formInformationTitle" value="Feed Back" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Your Name" />
			<var name="fieldType" value="Text" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Rate Us!" />
			<var name="fieldType" value="Check Box" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Additional Comments" />
			<var name="fieldType" value="Text Box" />
		</execute>
	</command>

	<command name="EditWebFormAndViewMultipleFields" priority="3">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="WebForm#viewPG">
			<var name="formInformationDescription" value="Your input is valuable to us. Please send us your suggestions." />
			<var name="formInformationTitle" value="Suggestions" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Name" />
			<var name="fieldType" value="Text" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Rating" />
			<var name="fieldType" value="Select" />
		</execute>

		<execute macro="WebForm#viewFormField">
			<var name="fieldName" value="Comments" />
			<var name="fieldType" value="Text Box" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="WebFormPortlet#configureSetupFormFieldsPG">
			<var name="formInformationDescription" value="Please let us know what you think!" />
			<var name="formInformationTitle" value="Feed Back" />
		</execute>

		<execute macro="WebFormPortlet#editField">
			<var name="fieldName" value="Name" />
			<var name="newFieldName" value="Test 1" />
		</execute>

		<execute macro="WebFormPortlet#addField">
			<var name="fieldName" value="Name" />
			<var name="newFieldName" value="Test 2" />
			<var name="previousFieldName" value="Test 1" />
		</execute>

		<execute macro="WebFormPortlet#editField">
			<var name="fieldName" value="Rating" />
			<var name="fieldType" value="Check Box" />
			<var name="newFieldName" value="Rate Us!" />
		</execute>

		<execute macro="WebFormPortlet#editField">
			<var name="fieldName" value="Comments" />
			<var name="newFieldName" value="Additional Comments" />
		</execute>

		<execute macro="WebFormPortlet#saveConfiguration" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="WebForm#viewPG">
			<var name="formInformationDescription" value="Please let us know what you think!" />
			<var name="formInformationTitle" value="Feed Back" />
		</execute>

		<execute action="PGWebform#assertTextEquals" locator1="xpath=(//div[contains(@class,'control')]/label[contains(@for,'webformportlet')])[1]" value1="Test 1" />
		<execute action="PGWebform#assertElementPresent" locator1="xpath=(//fieldset/div/div[contains(@class,'control')]/input[@type='text'])[1]" />
		<execute action="PGWebform#assertTextEquals" locator1="xpath=(//div[contains(@class,'control')]/label[contains(@for,'webformportlet')])[2]" value1="Test 2" />
		<execute action="PGWebform#assertElementPresent" locator1="xpath=(//fieldset/div/div[contains(@class,'control')]/input[@type='text'])[2]" />
		<execute action="PGWebform#assertTextEquals" locator1="//label[@class='checkbox']" value1="Rate Us!" />
		<execute action="PGWebform#assertElementPresent" locator1="//label[@class='checkbox']/input[@type='checkbox']" />
		<execute action="PGWebform#assertTextEquals" locator1="xpath=(//div[contains(@class,'control')]/label[contains(@for,'webformportlet')])[3]" value1="Additional Comments" />
		<execute action="PGWebform#assertElementPresent" locator1="//fieldset/div/div[contains(@class,'control')]/textarea" />
	</command>

	<command name="SendWebForm" priority="5">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute action="PGWebformConfiguration#selectFrame" locator-key1="CONFIGURATION_IFRAME" />

		<execute macro="WebFormPortlet#viewField">
			<var name="fieldName" value="Name" />
		</execute>

		<execute macro="WebFormPortlet#viewField">
			<var name="fieldName" value="Rating" />
		</execute>

		<execute macro="WebFormPortlet#viewField">
			<var name="fieldName" value="Comments" />
		</execute>

		<execute action="PGWebformConfiguration#selectFrameTop" value1="relative=top" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="WebForm#populateFormField">
			<var name="fieldName" value="Name" />
			<var name="fieldType" value="Text" />
			<var name="formFieldValue" value="Test Test" />
		</execute>

		<execute macro="WebForm#populateFormField">
			<var name="fieldName" value="Rating" />
			<var name="fieldType" value="Select" />
			<var name="formFieldValue" value="Excellent" />
		</execute>

		<execute macro="WebForm#populateFormField">
			<var name="fieldName" value="Comments" />
			<var name="fieldType" value="Text Box" />
			<var name="formFieldValue" value="Page Objects + Hashi = Poshi" />
		</execute>

		<execute macro="WebForm#sendPG" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute action="PGWebformConfiguration#selectFrame" locator-key1="CONFIGURATION_IFRAME" />
		<execute action="PGWebformConfiguration#assertTextEquals" locator-key1="SETUP_FORM_FIELDS_INFO_MESSAGE" value1="There is existing form data. Please export and delete it before making changes to the fields." />

		<execute macro="WebFormPortlet#viewFieldNotPresent">
			<var name="fieldName" value="Name" />
		</execute>

		<execute macro="WebFormPortlet#viewFieldNotPresent">
			<var name="fieldName" value="Rating" />
		</execute>

		<execute macro="WebFormPortlet#viewFieldNotPresent">
			<var name="fieldName" value="Comments" />
		</execute>

		<execute action="PGWebformConfiguration#selectFrameTop" value1="relative=top" />
	</command>
</definition>