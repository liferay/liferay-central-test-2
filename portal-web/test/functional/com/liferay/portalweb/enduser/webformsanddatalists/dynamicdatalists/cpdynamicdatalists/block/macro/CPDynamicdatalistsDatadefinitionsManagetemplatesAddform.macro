<definition>
	<command name="showDetails">
		<if>
			<condition function="IsElementNotPresent#isNotVisible" locator1="CPDynamicdatalistsDatadefinitionsManagetemplatesAddform#DETAILS_DESCRIPTION_FIELD" />
			<then>
				<execute function="AssertClick" locator1="CPDynamicdatalistsDatadefinitionsManagetemplatesAddform#DETAILS" value1="Details" />
			</then>
		</if>

		<execute function="AssertElementPresent" locator1="CPDynamicdatalistsDatadefinitionsManagetemplatesAddform#DETAILS_LANGUAGE_SELECT" />
	</command>
</definition>