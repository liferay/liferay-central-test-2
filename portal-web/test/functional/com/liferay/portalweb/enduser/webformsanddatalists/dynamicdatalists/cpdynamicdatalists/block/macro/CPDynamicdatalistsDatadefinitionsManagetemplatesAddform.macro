<definition>
	<command name="showDetails">
		<if>
			<condition action="CPDynamicdatalistsDatadefinitionsManagetemplatesAddform#isElementNotPresent" locator1="DETAILS_DESCRIPTION_FIELD" />
			<then>
				<execute action="CPDynamicdatalistsDatadefinitionsManagetemplatesAddform#assertClick" locator1="DETAILS" value1="Details" />
			</then>
		</if>

		<execute action="CPDynamicdatalistsDatadefinitionsManagetemplatesAddform#assertElementPresent" locator1="DETAILS_LANGUAGE_SELECT" />
	</command>
</definition>