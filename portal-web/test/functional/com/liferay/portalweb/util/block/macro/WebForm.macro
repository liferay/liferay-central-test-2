<definition>
	<command name="populateFormField">
		<var name="key_fieldName" value="${fieldName}" />

		<if>
			<equals arg1="${fieldType}" arg2="Text" />
			<then>
				<execute action="PGWebform#assertTextEquals" locator-key1="FORM_FIELDS_FIELD_HEADER" value1="${fieldName}" />
				<execute action="PGWebform#type" locator-key1="FORM_FIELDS_TEXT_FIELD" value1="${formFieldValue}" />
			</then>
		</if>

		<if>
			<equals arg1="${fieldType}" arg2="Select" />
			<then>
				<execute action="PGWebform#assertTextEquals" locator-key1="FORM_FIELDS_FIELD_HEADER" value1="${fieldName}" />
				<execute action="PGWebform#select" locator-key1="FORM_FIELDS_SELECT_FIELD" value1="${formFieldValue}" />
			</then>
		</if>

		<if>
			<equals arg1="${fieldType}" arg2="Check Box" />
			<then>
				<execute action="PGWebform#assertTextEquals" locator-key1="FORM_FIELDS_CHECKBOX_FIELD_HEADER" value1="${fieldName}" />
				<execute action="PGWebform#assertElementPresent" locator-key1="FORM_FIELDS_CHECKBOX_FIELD" />
				<execute action="PGWebform#check" locator-key1="FORM_FIELDS_CHECKBOX_FIELD" />
			</then>
		</if>

		<if>
			<equals arg1="${fieldType}" arg2="Text Box" />
			<then>
				<execute action="PGWebform#assertTextEquals" locator-key1="FORM_FIELDS_FIELD_HEADER" value1="${fieldName}" />
				<execute action="PGWebform#type" locator-key1="FORM_FIELDS_TEXT_BOX_FIELD" value1="${formFieldValue}" />
			</then>
		</if>
	</command>

	<command name="sendPG">
		<execute action="PGWebform#assertClick" locator-key1="SEND_BUTTON" value1="Send" />
		<execute action="PGWebform#assertTextEquals" locator-key1="SUCCESS_MESSAGE_FORM" value1="The form information was sent successfully." />
	</command>

	<command name="viewFormField">
		<var name="key_fieldName" value="${fieldName}" />

		<if>
			<equals arg1="${fieldType}" arg2="Text" />
			<then>
				<execute action="PGWebform#assertTextEquals" locator-key1="FORM_FIELDS_FIELD_HEADER" value1="${fieldName}" />
				<execute action="PGWebform#assertElementPresent" locator-key1="FORM_FIELDS_TEXT_FIELD" />
			</then>
		</if>

		<if>
			<equals arg1="${fieldType}" arg2="Select" />
			<then>
				<execute action="PGWebform#assertTextEquals" locator-key1="FORM_FIELDS_FIELD_HEADER" value1="${fieldName}" />
				<execute action="PGWebform#assertElementPresent" locator-key1="FORM_FIELDS_SELECT_FIELD" />
			</then>
		</if>

		<if>
			<equals arg1="${fieldType}" arg2="Check Box" />
			<then>
				<execute action="PGWebform#assertTextEquals" locator-key1="FORM_FIELDS_CHECKBOX_FIELD_HEADER" value1="${fieldName}" />
				<execute action="PGWebform#assertElementPresent" locator-key1="FORM_FIELDS_CHECKBOX_FIELD" />
			</then>
		</if>

		<if>
			<equals arg1="${fieldType}" arg2="Text Box" />
			<then>
				<execute action="PGWebform#assertTextEquals" locator-key1="FORM_FIELDS_FIELD_HEADER" value1="${fieldName}" />
				<execute action="PGWebform#assertElementPresent" locator-key1="FORM_FIELDS_TEXT_BOX_FIELD" />
			</then>
		</if>
	</command>

	<command name="viewPG">
		<execute action="PGWebform#assertTextEquals" locator-key1="FORM_INFORMATION_TITLE" value1="${formInformationTitle}" />
		<execute action="PGWebform#assertTextEquals" locator-key1="FORM_INFORMATION_DESCRIPTION" value1="${formInformationDescription}" />
	</command>
</definition>