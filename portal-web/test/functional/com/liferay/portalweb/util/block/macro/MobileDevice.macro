<definition>
	<command name="addCP">
		<execute function="#click" locator1="MobileDevice#ADD_DEVICE_FAMILY_BUTTON" />
		<execute function="#type" locator1="MobileDevice#ADD_DEVICE_FAMILY_NAME_FIELD" value1="Device Family Name" />
		<execute function="#type" locator1="MobileDevice#ADD_DEVICE_FAMILY_DESCRIPTION_FIELD" value1="Device Family Description" />
		<execute function="#assertClick" locator1="MobileDevice#SAVE_BUTTON" value1="Save" />
		<execute function="#assertTextEquals" locator1="MobileDevice#SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute function="#click" locator1="MobileDevice#MANAGE_CLASSIFICATION_RULES" />
		<execute function="#click" locator1="MobileDevice#ADD_CLASSIFICATION_RULE_BUTTON" />
		<execute function="#type" locator1="MobileDevice#ADD_CLASSIFICATION_RULE_NAME_FIELD" value1="Classification Name" />
		<execute function="#type" locator1="MobileDevice#ADD_CLASSIFICATION_RULE_DESCRIPTION_FIELD" value1="Classification Description" />
		<execute function="#assertClick" locator1="MobileDevice#SAVE_BUTTON" value1="Save" />
		<execute function="#assertTextEquals" locator1="MobileDevice#SUCCESS_MESSAGE" value1="Your request completed successfully." />

		<var name="key_classificationName" value="${classificationName}" />

		<execute function="#assertTextEquals" locator1="MobileDevice#ADD_CLASSIFICATION_RULE_TABLE_NAME" value1="Classification Name" />

		<execute macro="Page#gotoConfigurationCP">
			<var name="portletName" value="Mobile Device Families" />
			<var name="siteScopeName" value="Site Name" />
		</execute>

		<var name="key_deviceFamilyName" value="${deviceFamilyName}" />

		<execute function="#assertTextEquals" locator1="MobileDevice#DEVICE_FAMILY_TABLE_NAME" value1="${deviceFamilyName}" />
	</command>

	<command name="previewPG">
		<execute function="Click#clickAtSidebarClickAt" locator1="Dockbar#PREVIEW" />

		<if>
			<equals arg1="${deviceType}" arg2="smartphone" />
			<then>
				<execute function="#assertVisible" locator1="//iframe[@id='devicePreviewIframe' and contains(@style,'height: 640px;') and contains(@style,'width: 400px;')]" />

				<take-screenshot />

				<execute function="#click" locator1="DockbarPreviewpanel#PREVIEW_SMARTPHONE" />
				<execute function="#assertVisible" locator1="//iframe[@id='devicePreviewIframe' and contains(@style,'height: 400px;') and contains(@style,'width: 640px;')]" />

				<take-screenshot />
			</then>
			<elseif>
				<equals arg1="${deviceType}" arg2="tablet" />
				<then>
					<execute function="#click" locator1="DockbarPreviewpanel#PREVIEW_TABLET" />
					<execute function="#assertVisible" locator1="//iframe[@id='devicePreviewIframe' and contains(@style,'height: 900px;') and contains(@style,'width: 760px;')]" />

					<take-screenshot />

					<execute function="#click" locator1="DockbarPreviewpanel#PREVIEW_TABLET" />
					<execute function="#assertVisible" locator1="//iframe[@id='devicePreviewIframe' and contains(@style,'height: 760px;') and contains(@style,'width: 900px;')]" />

					<take-screenshot />
				</then>
			</elseif>
			<elseif>
				<equals arg1="${deviceType}" arg2="desktop" />
				<then>
					<execute function="#click" locator1="DockbarPreviewpanel#PREVIEW_DESKTOP" />
					<execute function="#assertVisible" locator1="//iframe[@id='devicePreviewIframe' and contains(@style,'height: 1050px;') and contains(@style,'width: 1300px;')]" />

					<take-screenshot />
				</then>
			</elseif>
			<elseif>
				<equals arg1="${deviceType}" arg2="custom" />
				<then>
					<execute function="#click" locator1="DockbarPreviewpanel#PREVIEW_CUSTOM" />

					<take-screenshot />

					<if>
						<isset var="height" />
						<then>
							<execute function="#type" locator1="DockbarPreviewpanel#PREVIEW_CUSTOM_HEIGHT_FIELD" value1="${height}" />
						</then>
						<else>
							<var name="height" value="400" />
						</else>
					</if>

					<if>
						<isset var="width" />
						<then>
							<execute function="#type" locator1="DockbarPreviewpanel#PREVIEW_CUSTOM_WIDTH_FIELD" value1="${width}" />
						</then>
						<else>
							<var name="width" value="400" />
						</else>
					</if>

					<execute function="#assertVisible" locator1="//iframe[@id='devicePreviewIframe' and contains(@style,'height: ${height}px;') and contains(@style,'width: ${width}px;')]" />

					<take-screenshot />
				</then>
			</elseif>
		</if>

		<execute function="#assertTextEquals" locator1="DockbarPreviewpanel#PREVIEW_MESSAGE" value1="Preview may not be accurate." />
		<execute function="#selectFrame" locator1="//iframe[@id='devicePreviewIframe']" />
	</command>

	<command name="selectMobileDevice">
		<execute function="#sikuliClick" locator1="MobileDevice#MOBILE_DEVICE_SCREENSHOT" />
	</command>
</definition>