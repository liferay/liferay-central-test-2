<definition>
	<command name="addCP">
		<execute action="CPKnowledgebaseadmin#assertClick" locator1="NAVIGATION_TEMPLATES" value1="Templates" />

		<execute action="CPKnowledgebaseadminTemplates#assertClick" locator1="ADD_TEMPLATE_BUTTON" value1="Add Template" />

		<execute action="CPKnowledgebaseadminAddtemplate#type" locator1="TITLE_FIELD" value1="${kbTemplateTitle}" />
		<execute action="CPKnowledgebaseadminAddtemplate#type" locator1="CONTENT_FIELD" value1="${kbTemplateContent}" />
		<execute action="CPKnowledgebaseadminAddtemplate#assertClick" locator1="PUBLISH_BUTTON" value1="Publish" />

		<execute action="CPKnowledgebaseadminTemplates#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="gotoCP">
		<execute action="CPKnowledgebaseadmin#assertClick" locator1="NAVIGATION_TEMPLATES" value1="Templates" />

		<var name="key_kbTemplateTitle" value="${kbTemplateTitle}" />

		<execute action="CPKnowledgebaseadminTemplates#click" locator1="TEMPLATE_TABLE_ACTIONS" />
		<execute action="CPKnowledgebaseadminTemplates#assertClick" locator1="ACTIONS_MENULIST_VIEW" value1="View" />
	</command>

	<command name="tearDownCP">
		<execute macro="Page#gotoContentCP">
			<var name="portletName" value="Knowledge Base" />
		</execute>

		<execute action="CPKnowledgebaseadmin#assertClick" locator1="NAVIGATION_TEMPLATES" value1="Templates" />

		<if>
			<condition action="CPKnowledgebaseadminTemplates#isElementPresent" locator1="TEMPLATE_TABLE_CHECKBOX_ALL" />
			<then>
				<execute action="CPKnowledgebaseadminTemplates#check" locator1="TEMPLATE_TABLE_CHECKBOX_ALL" />
				<execute action="CPKnowledgebaseadminTemplates#assertClick" locator1="DELETE_BUTTON" value1="Delete" />
				<execute action="CPKnowledgebaseadminTemplates#confirm" locator1="CONFIRMATION" value1="Are you sure you want to delete the selected templates?" />
				<execute action="CPKnowledgebaseadminTemplates#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</if>
	</command>

	<command name="viewCP">
		<execute macro="KBTemplate#gotoCP">
			<var name="key_kbTemplateTitle" value="${kbTemplateTitle}" />
		</execute>

		<execute action="CPKnowledgebaseadminTemplate#assertTextEquals" locator1="TEMPLATE_TITLE" value1="${kbTemplateTitle}" />
		<execute action="CPKnowledgebaseadminTemplate#assertTextEquals" locator1="TEMPLATE_CONTENT" value1="${kbTemplateContent}" />
	</command>

	<command name="viewCPViaAddTemplate">
		<execute action="CPKnowledgebaseadmin#assertClick" locator1="ADD_BUTTON" value1="Add" />
		<execute action="CPKnowledgebaseadmin#assertClick" locator1="ADD_MENULIST_TEMPLATE" value1="${kbTemplateTitle}" />

		<execute action="CPKnowledgebaseadminAddarticle#assertTextEquals" locator1="TITLE_FIELD" value1="" />

		<execute action="CPKnowledgebaseadminAddarticle#selectFrame" locator1="CONTENT_FIELD" />
		<execute action="CPKnowledgebaseadminAddarticle#assertTextEquals" locator1="CONTENT_BODY" value1="${kbTemplateContent}" />
	</command>
</definition>