<definition>
	<command name="configureFilterByCategories">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletName" value="Related Assets" />
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute function="#selectFrame" locator1="BasePortletConfiguration#CONFIGURATION_IFRAME" />

		<execute function="#select" locator1="PGRelatedassetsConfiguration#FILTER_SELECT" value1="Categories" />
		<execute function="#assertClick" locator1="PGRelatedassetsConfiguration#FILTER_SELECT_CATEGORIES_SELECT_BUTTON" value1="Select" />

		<var name="key_categoryName" value="${categoryName}" />

		<execute function="#click" locator1="PGRelatedassetsConfiguration#CATEGORIES_WINDOW_CATEGORY_CHECKBOX" />
		<execute function="#click" locator1="PGRelatedassetsConfiguration#CATEGORIES_WINDOW_CLOSE_BUTTON" />
		<execute function="#assertTextEquals" locator1="PGRelatedassetsConfiguration#CATEGORY" value1="${categoryName}" />
		<execute function="#assertClick" locator1="PGRelatedassetsConfiguration#SAVE_BUTTON" value1="Save" />
		<execute function="#assertTextEquals" locator1="PGRelatedassetsConfiguration#SUCCESS_MESSAGE" value1="You have successfully updated the setup." />

		<execute function="#selectFrame" value1="relative=top" />
	</command>

	<command name="gotoBookmarksSelectionPG">
		<execute function="#assertClick" locator1="PGBookmarks#FOLDER_MENU_ADD_BOOKMARK" value1="Add Bookmark" />

		<if>
			<condition function="#isElementPresent" locator1="PGBookmarksAddBookmark#RELATED_ASSETS_PANEL_COLLAPSED" />
			<then>
				<execute function="#click" locator1="PGBookmarksAddBookmark#RELATED_ASSETS_PANEL_COLLAPSED" />
				<execute function="#assertElementPresent" locator1="PGBookmarksAddBookmark#RELATED_ASSETS_PANEL_EXPANDED" />
			</then>
		</if>

		<var name="key_assetType" value="${assetType}" />

		<execute function="#assertClick" locator1="PGBookmarksAddBookmark#RELATED_ASSETS_SELECT" value1="Select" />
		<execute function="#assertClick" locator1="PGBookmarksAddBookmark#RELATED_ASSETS_MENULIST_SELECTION" value1="${assetType}" />
	</command>

	<command name="gotoWebContentSelectionCP">
		<execute function="#assertClick" locator1="CPWebcontent#TOOLBAR_ADD" value1="Add" />
		<execute function="#assertClick" locator1="CPWebcontent#ADD_MENULIST_BASIC_WEB_CONTENT" value1="Basic Web Content" />

		<var name="key_assetType" value="${assetType}" />

		<execute function="#assertClick" locator1="CPWebcontentAddwebcontent#MENU_RELATED_ASSETS" value1="Related Assets" />
		<execute function="#assertClick" locator1="CPWebcontentAddwebcontent#RELATED_ASSETS_SELECT" value1="Select" />
		<execute function="#assertClick" locator1="CPWebcontentAddwebcontent#RELATED_ASSETS_MENULIST_SELECTION" value1="${assetType}" />
	</command>

	<command name="searchAdvancedRelatedAssetsCP">
		<if>
			<condition function="#isElementNotPresent" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_OPERATOR_SELECTION" />
			<then>
				<execute function="#click" locator1="CPRelatedassetsSelect#SEARCH_ADVANCED_MENULIST" />
			</then>
		</if>

		<if>
			<condition function="#isTextNotEqual" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_OPERATOR_SELECTION" value1="All" />
			<then>
				<execute function="#select" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_OPERATOR_SELECTION" value1="All" />
			</then>
		</if>

		<for list="ADVANCED_SEARCH_TITLE_FIELD,ADVANCED_SEARCH_DESCRIPTION_FIELD,ADVANCED_SEARCH_USER_NAME_FIELD" param="advancedSearchKey">
			<if>
				<condition function="#isTextNotEqual" locator1="CPRelatedassetsSelect#${advancedSearchKey}" value1="" />
				<then>
					<execute function="#type" locator1="CPRelatedassetsSelect#${advancedSearchKey}" value1="" />
				</then>
			</if>
		</for>

		<if>
			<condition function="#isTextNotEqual" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_MY_SITES_SELECTION" value1="Liferay" />
			<then>
				<execute function="#select" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_MY_SITES_SELECTION" value1="Liferay" />
			</then>
		</if>

		<if>
			<isset var="searchOperator" />
			<then>
				<execute function="#select" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_OPERATOR_SELECTION" value1="${searchOperator}" />
			</then>
		</if>

		<if>
			<isset var="searchTitle" />
			<then>
				<execute function="#type" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_TITLE_FIELD" value1="${searchTitle}" />
			</then>
		</if>

		<if>
			<isset var="searchDescription" />
			<then>
				<execute function="#type" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_DESCRIPTION_FIELD" value1="${searchDescription}" />
			</then>
		</if>

		<if>
			<isset var="searchUserName" />
			<then>
				<execute function="#type" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_USER_NAME_FIELD" value1="${searchUserName}" />
			</then>
		</if>

		<if>
			<isset var="searchSite" />
			<then>
				<execute function="#select" locator1="CPRelatedassetsSelect#ADVANCED_SEARCH_MY_SITES_SELECTION" value1="${searchSite}" />
			</then>
		</if>

		<execute function="#assertClick" locator1="CPRelatedassetsSelect#SEARCH_BUTTON" value1="Search" />
	</command>

	<command name="viewAdvancedSearchNoResultCP">
		<for list="${forList}" param="assetTitle">
			<var name="key_assetTitle" value="${assetTitle}" />

			<execute function="#assertTextNotPresent" locator1="CPRelatedassetsSelect#ASSET_TABLE_TITLE" value1="${assetTitle}" />
		</for>
	</command>

	<command name="viewAdvancedSearchResultTitleCP">
		<for list="${forList}" param="assetTitle">
			<var name="key_assetTitle" value="${assetTitle}" />

			<execute function="#assertTextEquals" locator1="CPRelatedassetsSelect#ASSET_TABLE_TITLE" value1="${assetTitle}" />
		</for>
	</command>

	<command name="viewDefaultPG">
		<execute function="#assertTextEquals" locator1="PGRelatedassets#TITLE" value1="Related Assets" />
		<execute function="#assertTextEquals" locator1="PGRelatedassets#INFO_MESSAGE" value1="There are no related assets available. This application will show all assets related to the main asset of the current page." />
	</command>

	<command name="viewNoPG">
		<for list="${assetTitleList}" param="assetTitle">
			<var name="key_assetTitle" value="${assetTitle}" />

			<execute function="#assertElementNotPresent" locator1="PGRelatedassets#ASSET_TITLE" />
		</for>
	</command>

	<command name="viewNoSearchResultsCP">
		<execute function="#assertTextEquals" locator1="CPRelatedassetsSelect#INFO_MESSAGE" value1="There are no results." />
	</command>

	<command name="viewPG">
		<execute function="#assertElementPresent" locator1="PGRelatedassets#ASSET_TITLE_IMAGE_1" />
		<execute function="#assertTextEquals" locator1="PGRelatedassets#ASSET_TITLE_1" value1="${assetTitle}" />
		<execute function="#assertElementPresent" locator1="PGRelatedassets#ASSET_EDIT_1" />
	</command>

	<command name="viewViaSelectCP">
		<execute function="#selectFrame" locator1="CPRelatedassetsSelect#IFRAME" />
		<execute function="#assertElementPresent" locator1="CPRelatedassetsSelect#SEARCH_ADVANCED_MENULIST" />
		<execute function="#assertElementPresent" locator1="CPRelatedassetsSelect#SEARCH_FIELD" />
		<execute function="#assertTextEquals" locator1="CPRelatedassetsSelect#SEARCH_BUTTON" value1="Search" />

		<for list="${forList}" param="assetTitle">
			<var name="key_assetTitle" value="${assetTitle}" />

			<execute function="#assertTextEquals" locator1="CPRelatedassetsSelect#ASSET_TABLE_TITLE" value1="${assetTitle}" />
		</for>
	</command>
</definition>