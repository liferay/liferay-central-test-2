<definition>
	<command name="addField">
		<var name="key_wfPreviousFieldName" value="${wfPreviousFieldName}" />

		<execute action="PGWebformConfiguration#click" locator1="SETUP_FORM_FIELDS_ADD_ROW_BUTTON" />

		<execute macro="WebFormPortlet#editField">
			<var name="wfFieldName" value="New Item" />
			<var name="wfNewFieldName" value="${wfNewFieldName}" />
		</execute>
	</command>

	<command name="configureSetupFormFieldsPG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute action="PGWebformConfiguration#selectFrame" locator1="CONFIGURATION_IFRAME" />

		<if>
			<isset var="wfInformationTitle" />
			<then>
				<execute action="PGWebformConfiguration#type" locator1="SETUP_FORM_INFORMATION_TITLE_FIELD" value1="${wfInformationTitle}" />
			</then>
		</if>

		<if>
			<isset var="wfInformationDescription" />
			<then>
				<execute action="PGWebformConfiguration#type" locator1="SETUP_FORM_INFORMATION_DESCRIPTION_FIELD" value1="${wfInformationDescription}" />
			</then>
		</if>
	</command>

	<command name="deleteEditableField">
		<execute macro="WebFormPortlet#viewEditableField" />

		<var name="key_wfFieldName" value="${wfFieldName}" />

		<execute action="PGWebformConfiguration#doubleClick" locator1="SETUP_FORM_FIELDS_DELETE_ROW_BUTTON" />

		<execute macro="WebFormPortlet#viewEditableFieldNotVisibleCmd" />
	</command>

	<command name="editField">
		<var name="key_wfFieldName" value="${wfFieldName}" />

		<execute action="PGWebformConfiguration#type" locator1="SETUP_FORM_FIELDS_NAME_FIELD" value1="${wfNewFieldName}" />
		<execute action="PGWebformConfiguration#click" locator1="SETUP_FORM_FIELDS" />

		<if>
			<isset var="wfFieldType" />
			<then>
				<var name="key_wfNewFieldName" value="${wfNewFieldName}" />

				<execute action="PGWebformConfiguration#select" locator1="SETUP_FORM_FIELDS_TYPE_SELECT" value1="${wfFieldType}" />
			</then>
		</if>

		<if>
			<and>
				<or>
					<equals arg1="${wfFieldType}" arg2="Options" />
					<equals arg1="${wfFieldType}" arg2="Radio Buttons" />
				</or>
				<isset var="optionsList" />
			</and>
			<then>
				<var name="key_wfNewFieldName" value="${wfNewFieldName}" />

				<execute action="PGWebformConfiguration#type" locator1="SETUP_FORM_FIELDS_OPTIONS_FIELD" value1="${optionsList}" />
			</then>
		</if>

		<if>
			<equals arg1="${optional}" arg2="true" />
			<then>
				<var name="key_wfNewFieldName" value="${wfNewFieldName}" />

				<execute action="PGWebformConfiguration#check" locator1="SETUP_FORM_FIELDS_OPTIONAL_CHECKBOX" />
			</then>
		</if>
	</command>

	<command name="saveConfiguration">
		<execute action="PGWebformConfiguration#assertClick" locator1="SAVE_BUTTON" value1="Save" />
		<execute action="PGWebformConfiguration#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
		<execute action="PGWebformConfiguration#selectFrameTop" value1="relative=top" />
	</command>

	<command name="viewDeletedFieldNotPresent">
		<var name="key_wfFieldName" value="${wfFieldName}" />

		<execute action="PGWebformConfiguration#assertElementNotPresent" locator1="SETUP_FORM_POPULATED_FIELDS_FIELD_TITLE" />
	</command>

	<command name="viewEditableField">
		<var name="key_wfFieldName" value="${wfFieldName}" />

		<execute action="PGWebformConfiguration#assertElementPresent" locator1="SETUP_FORM_FIELDS_NAME_FIELD" />
	</command>

	<command name="viewEditableFieldNotPresent">
		<var name="key_wfFieldName" value="${wfFieldName}" />

		<execute action="PGWebformConfiguration#assertElementNotPresent" locator1="SETUP_FORM_FIELDS_NAME_EDITABLE_FIELD" />
	</command>

	<command name="viewEditableFieldNotVisibleCmd">
		<var name="key_wfFieldName" value="${wfFieldName}" />

		<execute action="PGWebformConfiguration#assertElementNotPresent" locator1="SETUP_FORM_FIELDS_NAME_FIELD" />
	</command>

	<command name="viewSubmittedField">
		<var name="key_wfFieldName" value="${wfFieldName}" />

		<execute action="PGWebformConfiguration#assertTextEquals" locator1="SETUP_FORM_POPULATED_FIELDS_FIELD_TITLE" value1="${wfFieldName}" />
		<execute action="PGWebformConfiguration#assertTextEquals" locator1="SETUP_FORM_POPULATED_FIELDS_FIELD_NAME" value1="${wfFieldName}" />

		<if>
			<equals arg1="${wfFieldType}" arg2="Text Box" />
			<then>
				<var name="key_wfFieldType" value="textarea" />
				<var name="wfFieldType" value="textarea" />

				<execute action="PGWebformConfiguration#assertTextEquals" locator1="SETUP_FORM_POPULATED_FIELDS_FIELD_TYPE" value1="${wfFieldType}" />
			</then>
			<else>
				<var name="key_wfFieldType" value="${wfFieldType}" />

				<execute action="PGWebformConfiguration#assertTextEquals" locator1="SETUP_FORM_POPULATED_FIELDS_FIELD_TYPE" value1="${wfFieldType}" />
			</else>
		</if>

		<if>
			<equals arg1="${optional}" arg2="true" />
			<then>
				<execute action="PGWebformConfiguration#assertTextEquals" locator1="SETUP_FORM_POPULATED_FIELDS_FIELD_OPTIONAL" value1="Yes" />
			</then>
			<else>
				<execute action="PGWebformConfiguration#assertTextEquals" locator1="SETUP_FORM_POPULATED_FIELDS_FIELD_OPTIONAL" value1="No" />
			</else>
		</if>

		<if>
			<isset var="optionsList" />
			<then>
				<var name="key_optionsList" value="${optionsList}" />

				<execute action="PGWebformConfiguration#assertTextEquals" locator1="SETUP_FORM_POPULATED_FIELDS_FIELD_OPTIONS" value1="${optionsList}" />
			</then>
		</if>
	</command>
</definition>