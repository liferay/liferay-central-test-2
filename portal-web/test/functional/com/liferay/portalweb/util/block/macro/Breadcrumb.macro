<definition>
	<command name="configureBreadcrumb">
		<execute action="BasePortletConfiguration#selectFrame" locator1="CONFIGURATION_IFRAME" />

		<if>
			<isset var="checkSetupName" />
			<then>
				<for list="${checkSetupName}" param="checkSetupName">
					<var name="key_checkSetupName" value="${checkSetupName}" />

					<execute action="PGBreadcrumbConfiguration#check" locator1="SHOW_SPECIFIC_CHECKBOX" />
				</for>
			</then>
		</if>

		<if>
			<isset var="uncheckSetupName" />
			<then>
				<for list="${uncheckSetupName}" param="uncheckSetupName">
					<var name="key_checkSetupName" value="${uncheckSetupName}" />

					<execute action="PGBreadcrumbConfiguration#uncheck" locator1="SHOW_SPECIFIC_CHECKBOX" />
				</for>
			</then>
		</if>

		<if>
			<equals arg1="${configureWithoutSave}" arg2="true" />
			<then>
				<echo message="Configuring Breadcrumb without saving to check bug." />
			</then>
			<else>
				<execute action="PGBreadcrumbConfiguration#assertClick" locator1="PORTLET_CONFIGURATION_SAVE_BUTTON" value1="Save" />
				<execute action="PGBreadcrumbConfiguration#assertTextEquals" locator1="PORTLET_CONFIGURATION_SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
			</else>
		</if>

		<execute action="BasePortletConfiguration#selectFrame" value1="relative=top" />
	</command>

	<command name="viewConfigurationCheckboxes">
		<execute action="BasePortletConfiguration#selectFrame" locator1="CONFIGURATION_IFRAME" />

		<if>
			<isset var="checkSetupName" />
			<then>
				<for list="${checkSetupName}" param="checkSetupName">
					<var name="key_checkSetupName" value="${checkSetupName}" />

					<execute action="PGBreadcrumbConfiguration#assertChecked" locator1="SHOW_SPECIFIC_CHECKBOX" />
				</for>
			</then>
		</if>

		<if>
			<isset var="uncheckSetupName" />
			<then>
				<for list="${uncheckSetupName}" param="uncheckSetupName">
					<var name="key_checkSetupName" value="${uncheckSetupName}" />

					<execute action="PGBreadcrumbConfiguration#assertNotChecked" locator1="SHOW_SPECIFIC_CHECKBOX" />
				</for>
			</then>
		</if>

		<execute action="BasePortletConfiguration#selectFrame" value1="relative=top" />
	</command>

	<command name="viewConfigurationPreview">
		<execute action="BasePortletConfiguration#selectFrame" locator1="CONFIGURATION_IFRAME" />

		<if>
			<isset var="breadcrumbListVisible" />
			<then>
				<for list="${breadcrumbListVisible}" param="breadcrumbName">
					<var name="key_breadcrumbName" value="${breadcrumbName}" />

					<execute action="PGBreadcrumbConfiguration#assertTextEquals" locator1="BREADCRUMB_PREVIEW_PAGE" value1="${breadcrumbName}" />
				</for>
			</then>
		</if>

		<if>
			<isset var="breadcrumbListNotVisible" />
			<then>
				<for list="${breadcrumbListNotVisible}" param="breadcrumbName">
					<var name="key_breadcrumbName" value="${breadcrumbName}" />

					<execute action="PGBreadcrumbConfiguration#assertElementNotPresent" locator1="BREADCRUMB_PREVIEW_PAGE" />
				</for>
			</then>
		</if>

		<execute action="BasePortletConfiguration#selectFrame" value1="relative=top" />
	</command>

	<command name="viewCurrentLocationPG">
		<if>
			<isset var="breadcrumbListVisible" />
			<then>
				<for list="${breadcrumbListVisible}" param="breadcrumbName">
					<var name="key_breadcrumbName" value="${breadcrumbName}" />

					<execute action="PGBreadcrumb#assertTextEquals" locator1="BREADCRUMB_CURRENT_LOCATION" value1="${breadcrumbName}" />
				</for>
			</then>
		</if>

		<if>
			<isset var="breadcrumbListNotVisible" />
			<then>
				<for list="${breadcrumbListNotVisible}" param="breadcrumbName">
					<var name="key_breadcrumbName" value="${breadcrumbName}" />

					<execute action="PGBreadcrumb#assertElementNotPresent" locator1="BREADCRUMB_CURRENT_LOCATION" />
				</for>
			</then>
		</if>
	</command>

	<command name="viewPG">
		<if>
			<isset var="breadcrumbListVisible" />
			<then>
				<for list="${breadcrumbListVisible}" param="breadcrumbName">
					<var name="key_breadcrumbName" value="${breadcrumbName}" />

					<execute action="PGBreadcrumb#assertTextEquals" locator1="BREADCRUMB_PAGE" value1="${breadcrumbName}" />
				</for>
			</then>
		</if>

		<if>
			<isset var="breadcrumbListNotVisible" />
			<then>
				<for list="${breadcrumbListNotVisible}" param="breadcrumbName">
					<var name="key_breadcrumbName" value="${breadcrumbName}" />

					<execute action="PGBreadcrumb#assertElementNotPresent" locator1="BREADCRUMB_PAGE" />
				</for>
			</then>
		</if>
	</command>
</definition>