<definition>
	<command name="addPG">
		<description message="Add a page called ${pageName}." />

		<execute macro="Page#openURL" />

		<execute action="Mobiledockbar#click" locator1="PENCIL_ICON" />
		<execute action="Mobiledockbar#assertClick" locator1="ADD" value1="Add" />

		<execute action="MobiledockbarAddpanelcontent#assertClick" locator1="NAVIGATION_PAGE" value1="Page" />

		<execute action="MobiledockbarAddpanelpage#type" locator1="NAME_FIELD" value1="${pageName}" />
		<execute function="#pause" locator1="2000" />
		<execute action="MobiledockbarAddpanelpage#assertClick" locator1="ADD_PAGE_BUTTON" value1="Add Page" />
		<execute function="#pause" locator1="2000" />
		<execute action="MobiledockbarAddpanelpage#click" locator1="CLOSE_BUTTON" />
	</command>

	<command name="gotoCmdCP">
		<execute macro="Page#openURL" />

		<execute action="Mobiledockbar#click" locator1="COG_ICON" />
		<execute action="Mobiledockbar#assertClick" locator1="${portletCategoryKey}" value1="${portletCategoryName}" />

		<if>
			<not>
				<contains string="${portletName}" substring="{portletName}" />
			</not>
			<then>
				<var name="key_portletName" value="${portletName}" />

				<execute action="Home#assertClick" locator1="SITE_ADMINISTRATION_NAVIGATION" value1="${portletName}" />
			</then>
		</if>
	</command>

	<command name="gotoConfigurationCP">
		<description message="Navigate to Site Administration > Configuration > ${portletName}." />

		<execute macro="MobilePage#gotoCmdCP">
			<var name="portletCategoryKey" value="ADMIN_SITE_ADMINISTRATION_CONFIGURATION" />
			<var name="portletCategoryName" value="Configuration" />
			<var name="portletName" value="${portletName}" />
		</execute>
	</command>

	<command name="gotoContentCP">
		<description message="Navigate to Site Administration > Content > ${portletName}." />

		<execute macro="MobilePage#gotoCmdCP">
			<var name="portletCategoryKey" value="ADMIN_SITE_ADMINISTRATION_CONTENT" />
			<var name="portletCategoryName" value="Content" />
			<var name="portletName" value="${portletName}" />
		</execute>
	</command>

	<command name="gotoCP">
		<description message="Navigate to Control Panel > ${portletName}." />

		<execute macro="Page#openURL" />

		<execute action="Mobiledockbar#click" locator1="COG_ICON" />
		<execute action="Mobiledockbar#assertClick" locator1="ADMIN_CONTROL_PANEL" value1="Control Panel" />

		<if>
			<isset var="portletName" />
			<then>
				<var name="key_portletName" value="${portletName}" />

				<execute action="Home#click" locator1="CONTROL_PANEL_NAVIGATION" />
			</then>
		</if>
	</command>

	<command name="gotoPagesCP">
		<description message="Navigate to Site Administration > Content > ${portletName}." />

		<execute macro="MobilePage#gotoCmdCP">
			<var name="portletCategoryKey" value="ADMIN_SITE_ADMINISTRATION_PAGES" />
			<var name="portletCategoryName" value="Pages" />
			<var name="portletName" value="${portletName}" />
		</execute>
	</command>

	<command name="gotoPG">
		<if>
			<not>
				<equals arg1="${mobilePreview}" arg2="true" />
			</not>
			<then>
				<execute macro="Page#openURL" />
			</then>
		</if>

		<execute action="Mobiledockbar#click" locator1="REORDER_ICON" />

		<var name="key_pageName" value="${pageName}" />

		<execute action="Mobiledockbar#assertClick" locator1="REORDER_MENULIST_PAGE_NAME" value1="${pageName}" />
	</command>

	<command name="tearDownCP">
		<execute macro="MobilePage#gotoPagesCP">
			<var name="portletName" value="Site Pages" />
		</execute>

		<while>
			<condition action="MobileCPSitepages#isElementPresent" locator1="PAGE_TREE_PAGE_LINK_2" />
			<then>
				<execute action="MobileCPSitepages#click" locator1="PAGE_TREE_PAGE_LINK_2" />
				<execute action="MobileCPSitepages#click" locator1="REORDER_ICON" />
				<execute action="MobileCPSitepages#assertClickNoError" locator1="TOOLBAR_DELETE" value1="Delete" />
				<execute action="MobileCPSitepages#confirm" locator1="CONFIRMATION" value1="Are you sure you want to delete the selected page?" />
				<execute action="MobileCPSitepages#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</while>
	</command>

	<command name="viewPortlet">
		<if>
			<not>
				<equals arg1="${mobilePreview}" arg2="true" />
			</not>
			<then>
				<execute macro="Page#openURL" />
			</then>
		</if>

		<var name="key_portletName" value="${portletName}" />

		<execute action="BasePortlet#mouseMove" locator1="SPECIFIC_PORTLET_OPTIONS_ICON" value1="${portletName}" />
	</command>
</definition>