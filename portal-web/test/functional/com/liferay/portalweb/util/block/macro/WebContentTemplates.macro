<definition>
	<command name="addCP">
		<execute action="CPWebcontent#assertClick" locator1="TOOLBAR_MANAGE" value1="Manage" />
		<execute action="CPWebcontent#assertClick" locator1="MANAGE_MENULIST_TEMPLATES" value1="Templates" />

		<execute action="CPWebcontentTemplates#selectFrame" locator1="TEMPLATES_IFRAME" />
		<execute action="CPWebcontentTemplates#assertClick" locator1="ADD" value1="Add" />
		<execute action="CPWebcontentTemplates#selectFrame" />

		<execute action="CPWebcontentTemplatesAddtemplate#selectFrame" locator1="TEMPLATES_IFRAME" />
		<execute action="CPWebcontentTemplatesAddtemplate#type" locator1="NAME_FIELD" value1="${templateName}" />

		<if>
			<isset var="localization1NameKey" />
			<then>
				<var name="key_localizationName" value="${localization1NameKey}" />

				<execute action="CPWebcontentStructuresAddstructure#click" locator1="LOCALIZATION_NAME" />
				<execute action="CPWebcontentStructuresAddstructure#type" locator1="NAME_FIELD" value1="${localization1Name}" />

				<if>
					<isset var="localization2NameKey" />
					<then>
						<var name="key_localizationName" value="${localization2NameKey}" />

						<execute action="CPWebcontentStructuresAddstructure#click" locator1="LOCALIZATION_NAME" />
						<execute action="CPWebcontentStructuresAddstructure#type" locator1="NAME_FIELD" value1="${localization2Name}" />
					</then>
				</if>
			</then>
		</if>

		<execute macro="CPWebcontentTemplatesAddtemplate#showDetails" />

		<if>
			<isset var="templateDescription" />
			<then>
				<execute action="CPWebcontentTemplatesAddtemplate#type" locator1="DESCRIPTION_FIELD" value1="${templateDescription}" />
			</then>
		</if>

		<if>
			<isset var="structureName" />
			<then>
				<execute action="CPWebcontentTemplatesAddtemplate#assertClick" locator1="SELECT_STRUCTURE" value1="Select" />

				<execute action="CPWebcontentTemplatesAddtemplateStructure#selectFrame" />
				<execute action="CPWebcontentTemplatesAddtemplateStructure#selectFrame" locator1="STRUCTURE_IFRAME" />

				<var name="key_structureName" value="${structureName}" />

				<execute action="CPWebcontentTemplatesAddtemplateStructure#assertTextEquals" locator1="STRUCTURE_TABLE_NAME" value1="${structureName}" />
				<execute action="CPWebcontentTemplatesAddtemplateStructure#assertClickNoError" locator1="STRUCTURE_TABLE_CHOOSE_BUTTON" value1="Choose" />
				<execute action="CPWebcontentTemplatesAddtemplateStructure#confirm" locator1="CONFIRMATION" value1="Selecting a new structure will change the available input fields and available templates? Do you want to proceed?" />

				<execute action="CPWebcontentTemplatesAddtemplate#selectFrame" />
				<execute action="CPWebcontentTemplatesAddtemplate#selectFrame" locator1="TEMPLATES_IFRAME" />
				<execute action="CPWebcontentTemplatesAddtemplate#assertTextEquals" locator1="STRUCTURE" value1="${structureName}" />

				<if>
					<equals arg1="${templateLanguage}" arg2="ftl" />
					<then>
						<for list="${templateFieldNames}" param="templateFieldName">
							<execute macro="WebContentTemplates#addField">
								<var name="fieldName" value="${templateFieldName}" />
							</execute>
						</for>
					</then>
				</if>
			</then>
		</if>

		<if>
			<equals arg1="${templateLanguage}" arg2="ftl" />
			<then>
				<execute action="CPWebcontentTemplatesAddtemplate#select" locator1="LANGUAGE_SELECT" value1="FreeMarker (.ftl)" />
			</then>
			<elseif>
				<equals arg1="${templateLanguage}" arg2="xsl" />
				<then>
					<execute action="CPWebcontentTemplatesAddtemplate#select" locator1="LANGUAGE_SELECT" value1="Extensible Stylesheet Language (.xsl)" />
				</then>
			</elseif>
			<else>
				<execute action="CPWebcontentTemplatesAddtemplate#select" locator1="LANGUAGE_SELECT" value1="Velocity (.vm)" />
			</else>
		</if>

		<if>
			<isset var="templateFile" />
			<then>
				<execute action="CPWebcontentTemplatesAddtemplate#uploadCommonFile" locator1="SCRIPT_CHOOSE_FILE" value1="${templateFile}" />
			</then>
		</if>

		<if>
			<isset var="templateScript" />
			<then>
				<execute action="CPWebcontentTemplatesAddtemplate#type" locator1="SCRIPT_CONTENT_FIELD" value1="${templateScript}" />
			</then>
		</if>

		<execute action="CPWebcontentTemplatesAddtemplate#assertClick" locator1="SAVE_BUTTON" value1="Save" />
		<execute action="CPWebcontentTemplatesAddtemplate#selectFrame" />
		<execute action="CPWebcontentTemplatesAddtemplate#selectFrame" locator1="TEMPLATES_IFRAME" />
		<execute action="CPWebcontentTemplates#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />

		<if>
			<isset var="addRoleViewPermissions" />
			<then>
				<var name="key_templateName" value="${templateName}" />

				<execute action="CPWebcontentTemplates#click" locator1="TEMPLATE_TABLE_ACTIONS" />
				<execute action="CPWebcontentTemplates#assertClick" locator1="TEMPLATE_MENULIST_PERMISSIONS" value1="Permissions" />

				<execute macro="PermissionsInline#addOrRemoveViewPermissionFromAllRoles">
					<var name="addOrRemoveViewPermission" value="Add" />
					<var name="roleList" value="${addRoleViewPermissions}" />
				</execute>
			</then>
		</if>
	</command>

	<command name="addField">
		<var name="fieldNameLabel" value="${fieldName?replace(' ', '_')}" />
		<var name="fieldNameLabel" value="${fieldNameLabel?lowercase()}" />
		<var name="key_fieldName" value="${fieldName}" />

		<execute action="CPWebcontentTemplatesAddtemplate#assertClick" locator1="PALETTE_FIELD" value1="${fieldName}" />
	</command>

	<command name="addNullCP">
		<execute action="CPWebcontent#assertClick" locator1="TOOLBAR_MANAGE" value1="Manage" />
		<execute action="CPWebcontent#assertClick" locator1="MANAGE_MENULIST_TEMPLATES" value1="Templates" />

		<execute action="CPWebcontentTemplates#selectFrame" locator1="TEMPLATES_IFRAME" />
		<execute action="CPWebcontentTemplates#assertClick" locator1="ADD" value1="Add" />
		<execute action="CPWebcontentTemplates#selectFrame" value1="relative=top" />

		<execute action="CPWebcontentTemplatesAddtemplate#selectFrame" locator1="TEMPLATES_IFRAME" />
		<execute action="CPWebcontentTemplatesAddtemplate#assertElementNotPresent" locator1="NAME_FIELD_REQUIRED" />
		<execute action="CPWebcontentTemplatesAddtemplate#assertClick" locator1="SAVE_BUTTON" value1="Save" />
		<execute action="CPWebcontentTemplatesAddtemplate#assertTextEquals" locator1="NAME_FIELD_REQUIRED" value1="This field is required." />

		<execute action="CPWebcontentTemplates#selectFrame" value1="relative=top" />
	</command>

	<command name="advancedSearchCP">
		<execute action="CPWebcontent#assertClick" locator1="TOOLBAR_MANAGE" value1="Manage" />
		<execute action="CPWebcontent#assertClick" locator1="MANAGE_MENULIST_TEMPLATES" value1="Templates" />

		<execute action="CPWebcontentTemplates#selectFrame" locator1="TEMPLATES_IFRAME" />

		<var name="key_templateName" value="${templateName}" />

		<execute action="CPWebcontentTemplates#assertTextEquals" locator1="TEMPLATE_TABLE_NAME" value1="${templateName}" />
		<execute action="CPWebcontentTemplates#click" locator1="ADVANCED_SEARCH_ICON" />

		<if>
			<isset var="templateName" />
			<then>
				<execute action="CPWebcontentTemplates#type" locator1="ADVANCED_SEARCH_NAME_FIELD" value1="${templateName}" />
			</then>
		</if>

		<if>
			<isset var="templateDescription" />
			<then>
				<execute action="CPWebcontentTemplates#type" locator1="ADVANCED_SEARCH_DESCRIPTION_FIELD" value1="${templateDescription}" />
			</then>
		</if>

		<execute action="CPWebcontentTemplates#assertClick" locator1="SEARCH_BUTTON" value1="Search" />
		<execute action="CPWebcontentTemplates#assertTextEquals" locator1="TEMPLATE_TABLE_NAME" value1="${templateName}" />
		<execute action="CPWebcontentTemplates#assertTextEquals" locator1="TEMPLATE_TABLE_DESCRIPTION" value1="${templateDescription}" />
	</command>

	<command name="deleteCP">
		<execute action="CPWebcontent#assertClick" locator1="TOOLBAR_MANAGE" value1="Manage" />
		<execute action="CPWebcontent#assertClick" locator1="MANAGE_MENULIST_TEMPLATES" value1="Templates" />

		<var name="key_templateName" value="${templateName}" />

		<execute action="CPWebcontentTemplates#selectFrame" locator1="TEMPLATES_IFRAME" />
		<execute action="CPWebcontentTemplates#type" locator1="SEARCH_FIELD" value1="${templateName}" />
		<execute action="CPWebcontentTemplates#assertClick" locator1="SEARCH_BUTTON" value1="Search" />
		<execute action="CPWebcontentTemplates#click" locator1="TEMPLATE_TABLE_ACTIONS" />
		<execute action="CPWebcontentTemplates#assertClickNoError" locator1="TEMPLATE_MENULIST_DELETE" value1="Delete" />
		<execute action="CPWebcontentTemplates#confirm" locator1="CONFIRMATION" value1="Are you sure you want to delete this? It will be deleted immediately." />

		<if>
			<equals arg1="${webContentHasReference}" arg2="true" />
			<then>
				<execute action="CPWebcontentTemplates#assertTextEquals" locator1="ERROR_MESSAGE_1" value1="Your request failed to complete." />
				<execute action="CPWebcontentTemplates#assertTextEquals" locator1="ERROR_MESSAGE_2" value1="Required templates could not be deleted. They are referenced by web content." />
			</then>
			<else>
				<execute action="CPWebcontentTemplates#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</else>
		</if>
	</command>

	<command name="tearDownCP">
		<execute macro="Page#gotoContentCP">
			<var name="portletName" value="Web Content" />
		</execute>

		<execute action="CPWebcontent#assertClick" locator1="TOOLBAR_MANAGE" value1="Manage" />
		<execute action="CPWebcontent#assertClick" locator1="MANAGE_MENULIST_TEMPLATES" value1="Templates" />

		<execute action="CPWebcontentTemplates#selectFrame" locator1="TEMPLATES_IFRAME" />

		<execute action="CPWebcontentTemplates#type" locator1="SEARCH_FIELD" value1="2" />
		<execute action="CPWebcontentTemplates#assertClick" locator1="SEARCH_BUTTON" value1="Search" />

		<while>
			<condition action="CPWebcontentTemplates#isElementPresent" locator1="TEMPLATE_TABLE_ACTIONS_GENERIC" />
			<then>
				<execute action="CPWebcontentTemplates#check" locator1="TEMPLATE_TABLE_SELECT_ALL_CHECKBOX" />
				<execute action="CPWebcontentTemplates#assertClickNoError" locator1="DELETE_BUTTON" value1="Delete" />
				<execute action="CPWebcontentTemplates#confirm" value1="Are you sure you want to delete this? It will be deleted immediately." />
				<execute action="CPWebcontentTemplates#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</while>

		<execute action="CPWebcontentTemplates#type" locator1="SEARCH_FIELD" value1="template" />
		<execute action="CPWebcontentTemplates#assertClick" locator1="SEARCH_BUTTON" value1="Search" />

		<while>
			<condition action="CPWebcontentTemplates#isElementPresent" locator1="TEMPLATE_TABLE_ACTIONS_GENERIC" />
			<then>
				<execute action="CPWebcontentTemplates#check" locator1="TEMPLATE_TABLE_SELECT_ALL_CHECKBOX" />
				<execute action="CPWebcontentTemplates#assertClickNoError" locator1="DELETE_BUTTON" value1="Delete" />
				<execute action="CPWebcontentTemplates#confirm" value1="Are you sure you want to delete this? It will be deleted immediately." />
				<execute action="CPWebcontentTemplates#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</while>

		<execute action="CPWebcontentTemplates#assertTextEquals" locator1="INFO_MESSAGE" value1="There are no templates." />
	</command>

	<command name="viewCP">
		<execute action="CPWebcontent#assertClick" locator1="TOOLBAR_MANAGE" value1="Manage" />
		<execute action="CPWebcontent#assertClick" locator1="MANAGE_MENULIST_TEMPLATES" value1="Templates" />

		<execute action="CPWebcontentTemplates#selectFrame" locator1="TEMPLATES_IFRAME" />

		<var name="key_templateName" value="${templateName}" />

		<execute action="CPWebcontentTemplates#assertTextEquals" locator1="TEMPLATE_TABLE_NAME" value1="${templateName}" />
		<execute action="CPWebcontentTemplates#assertTextEquals" locator1="TEMPLATE_TABLE_DESCRIPTION" value1="${templateDescription}" />

		<if>
			<isset var="structureName" />
			<then>
				<execute action="CPWebcontentTemplates#assertTextEquals" locator1="TEMPLATE_TABLE_STRUCTURE" value1="${structureName}" />
			</then>
		</if>

		<if>
			<equals arg1="${templateLanguage}" arg2="ftl" />
			<then>
				<execute action="CPWebcontentTemplates#assertTextEquals" locator1="TEMPLATE_TABLE_LANGUAGE" value1="FreeMarker" />
			</then>
			<elseif>
				<equals arg1="${templateLanguage}" arg2="xsl" />
				<then>
					<execute action="CPWebcontentTemplates#assertTextEquals" locator1="TEMPLATE_TABLE_LANGUAGE" value1="Extensible Stylesheet Language" />
				</then>
			</elseif>
			<else>
				<execute action="CPWebcontentTemplates#assertTextEquals" locator1="TEMPLATE_TABLE_LANGUAGE" value1="Velocity" />
			</else>
		</if>

		<execute action="CPWebcontentTemplates#assertClick" locator1="TEMPLATE_TABLE_NAME" value1="${templateName}" />
		<execute action="CPWebcontentTemplates#selectFrame" />

		<execute action="CPWebcontentTemplatesEdittemplate#selectFrame" locator1="TEMPLATES_IFRAME" />
		<execute action="CPWebcontentTemplatesEdittemplate#assertTextEquals" locator1="NAME_FIELD" value1="${templateName}" />

		<execute macro="CPWebcontentTemplatesAddtemplate#showDetails" />

		<execute action="CPWebcontentTemplatesEdittemplate#assertTextEquals" locator1="DESCRIPTION_FIELD" value1="${templateDescription}" />

		<if>
			<isset var="structureName" />
			<then>
				<execute action="CPWebcontentTemplatesEdittemplate#assertTextEquals" locator1="STRUCTURE" value1="${structureName}" />
			</then>
		</if>

		<if>
			<equals arg1="${templateLanguage}" arg2="ftl" />
			<then>
				<execute action="CPWebcontentTemplatesEdittemplate#assertSelectedLabel" locator1="LANGUAGE_SELECT" value1="FreeMarker (.ftl)" />
			</then>
			<elseif>
				<equals arg1="${templateLanguage}" arg2="xsl" />
				<then>
					<execute action="CPWebcontentTemplatesEdittemplate#assertSelectedLabel" locator1="LANGUAGE_SELECT" value1="Extensible Stylesheet Language (.xsl)" />
				</then>
			</elseif>
			<else>
				<execute action="CPWebcontentTemplatesEdittemplate#assertSelectedLabel" locator1="LANGUAGE_SELECT" value1="Velocity (.vm)" />
			</else>
		</if>

		<if>
			<isset var="templateScript" />
			<then>
				<execute action="CPWebcontentTemplatesEdittemplate#assertTextEquals" locator1="SCRIPT_CONTENT_FIELD" value1="${templateScript}" />
			</then>
		</if>
	</command>
</definition>