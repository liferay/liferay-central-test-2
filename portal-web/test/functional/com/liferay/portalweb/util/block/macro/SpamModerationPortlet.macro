<definition>
	<command name="MarkAsNotSpam">
		<if>
			<equals arg1="${assetType}" arg2="wikiPage" />
			<then>
				<var name="key_wikiPageTitle" value="${wikiPageTitle}" />

				<execute function="#check" locator1="CPSpamModerationWikis#WIKI_PAGE_TABLE_CHECKBOX" />
				<execute function="#assertClickNoError" locator1="CPSpamModerationWikis#WIKIS_NOT_SPAM_BUTTON" value1="Not Spam" />
				<execute function="#confirm" locator1="CPSpamModerationWikis#CONFIRMATION" value1="Are you sure you want to mark the selected pages not spam?" />
				<execute function="#assertTextEquals" locator1="CPSpamModerationWikis#SUCCESS_MESSAGE" value1="Your request completed successfully. " />
			</then>
		</if>
	</command>

	<command name="MarkAsSpam">
		<if>
			<equals arg1="${assetType}" arg2="wikiPage" />
			<then>
				<var name="key_wikiPageTitle" value="${wikiPageTitle}" />

				<execute function="#check" locator1="CPSpamModerationWikis#WIKI_PAGE_TABLE_CHECKBOX" />
				<execute function="#assertClickNoError" locator1="CPSpamModerationWikis#WIKIS_SPAM_BUTTON" value1="Spam" />
				<execute function="#confirm" locator1="CPSpamModerationWikis#CONFIRMATION" value1="Are you sure you want to mark the selected pages as spam?" />
				<execute function="#assertTextEquals" locator1="CPSpamModerationWikis#SUCCESS_MESSAGE" value1="Your request completed successfully. " />
			</then>
		</if>
	</command>

	<command name="navigateToDiscussions">
		<execute function="#assertClick" locator1="CPSpamModerationWikis#NAVIGATION_DISCUSSIONS" value1="Wikis" />
	</command>

	<command name="navigateToMessageBoards">
		<execute function="#assertClick" locator1="CPSpamModerationWikis#NAVIGATION_MESSAGE_BOARDS" value1="Wikis" />
	</command>

	<command name="navigateToWikis">
		<execute function="#assertClick" locator1="CPSpamModerationWikis#NAVIGATION_WIKIS" value1="Wikis" />
	</command>

	<command name="viewDefault">
		<if>
			<equals arg1="${assetType}" arg2="wikiPage" />
			<then>
				<execute function="#assertTextEquals" locator1="CPSpamModerationWikis#INFO_MESSAGE" value1="There are no pages. " />
			</then>
		</if>
	</command>

	<command name="viewMarkedAsSpam">
		<if>
			<equals arg1="${assetType}" arg2="wikiPage" />
			<then>
				<var name="key_wikiPageTitle" value="${wikiPageTitle}" />

				<execute function="#assertElementPresent" locator1="CPSpamModerationWikis#WIKI_PAGE_TABLE_CHECKBOX" />
				<execute function="#assertTextEquals" locator1="CPSpamModerationWikis#WIKI_PAGE_TABLE_TITLE" value1="${wikiPageTitle}" />
				<execute function="#assertTextEquals" locator1="CPSpamModerationWikis#WIKI_PAGE_TABLE_VERSION" value1="${wikiPageRevision}" />
				<execute function="#assertTextEquals" locator1="CPSpamModerationWikis#WIKI_PAGE_TABLE_POSTED_BY" value1="${wikiPageUsername}" />
				<execute function="#assertElementPresent" locator1="CPSpamModerationWikis#WIKI_PAGE_TABLE_ACTIONS" />
			</then>
		</if>
	</command>
</definition>