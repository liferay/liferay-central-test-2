<definition>
	<var name="passwordPolicyName" value="Default Password Policy" />

	<command name="enableDefaultPasswordPolicyLockout">
		<var name="key_passwordPolicyName" value="${passwordPolicyName}" />

		<execute action="Passwordpolicies#click" locator1="PASSWORD_POLICY_TABLE_ACTIONS" />
		<execute action="Passwordpolicies#assertClick" locator1="PASSWORD_POLICY_MENULIST_EDIT" value1="Edit" />

		<execute action="PasswordpoliciesEdit#check" locator1="LOCKOUT_ENABLED_CHECKBOX" />
		<execute action="PasswordpoliciesEdit#assertTextEquals" locator1="LOCKOUT_MAXIMUM_FAILURE_DROPDOWN" value1="3" />
		<execute action="PasswordpoliciesEdit#assertClick" locator1="SAVE_BUTTON" value1="Save" />

		<execute action="Passwordpolicies#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="tearDownCP">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="Password Policies" />
		</execute>

		<var name="key_passwordPolicyName" value="${passwordPolicyName}" />

		<execute action="Passwordpolicies#click" locator1="PASSWORD_POLICY_TABLE_ACTIONS" />
		<execute action="Passwordpolicies#assertClick" locator1="PASSWORD_POLICY_MENULIST_EDIT" value1="Edit" />

		<execute action="PasswordpoliciesEdit#uncheck" locator1="LOCKOUT_ENABLED_CHECKBOX" />
		<execute action="PasswordpoliciesEdit#assertClick" locator1="SAVE_BUTTON" value1="Save" />

		<execute action="Passwordpolicies#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="viewAssignMemberCP">
		<var name="key_passwordPolicyName" value="${passwordPolicyName}" />

		<execute action="Passwordpolicies#assertTextEquals" locator1="PASSWORD_POLICY_TABLE_NAME" value1="${passwordPolicyName}" />
		<execute action="Passwordpolicies#click" locator1="PASSWORD_POLICY_TABLE_ACTIONS" />
		<execute action="Passwordpolicies#assertClick" locator1="PASSWORD_POLICY_MENULIST_ASSIGN_MEMBERS" value1="Assign Members" />

		<var name="key_userScreenName" value="${userScreenName}" />

		<execute action="PasswordpoliciesAssignmembers#assertChecked" locator1="USERS_TABLE_CHECKBOX" />
		<execute action="PasswordpoliciesAssignmembers#assertTextEquals" locator1="USERS_TABLE_SCREEN_NAME" value1="${userScreenName}" />
	</command>
</definition>