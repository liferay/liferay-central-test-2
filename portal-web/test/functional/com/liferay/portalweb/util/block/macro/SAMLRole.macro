<definition>
	<command name="configure">
		<execute action="CPSAMLAdmin#select" locator1="SAML_ROLE_SELECT" value1="${samlRoleType}" />
		<execute action="CPSAMLAdmin#type" locator1="SAML_ENTITY_ID_FIELD" value1="${samlEntityID}" />
		<execute action="CPSAMLAdmin#assertClick" locator1="SAVE_BUTTON" value1="Save" />
		<execute action="CPSAMLAdmin#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="configureCertificateAndPrivateKey">
		<execute action="CPSAMLAdmin#type" locator1="CERTIFICATE_AND_PRIVATE_KEY_COMMON_NAME_FIELD" value1="Liferay QA" />
		<execute action="CPSAMLAdmin#type" locator1="CERTIFICATE_AND_PRIVATE_KEY_ORGANIZATION_FIELD" value1="Liferay" />
		<execute action="CPSAMLAdmin#type" locator1="CERTIFICATE_AND_PRIVATE_KEY_COUNTRY_FIELD" value1="USA" />
		<execute action="CPSAMLAdmin#select" locator1="CERTIFICATE_AND_PRIVATE_KEY_KEY_ALGORITHM_SELECT" value1="RSA" />
		<execute action="CPSAMLAdmin#select" locator1="CERTIFICATE_AND_PRIVATE_KEY_KEY_LENGTH_SELECT" value1="2048" />
		<execute action="CPSAMLAdmin#type" locator1="CERTIFICATE_AND_PRIVATE_KEY_KEY_PASSWORD_FIELD" value1="${samlKeyPassword}" />
		<execute action="CPSAMLAdmin#assertClick" locator1="CERTIFICATE_AND_PRIVATE_KEY_SAVE_BUTTON" value1="Save" />
		<execute action="CPSAMLAdmin#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="enable">
		<execute action="CPSAMLAdmin#assertTextEquals" locator1="SAML_ENTITY_ID_FIELD" value1="${samlEntityID}" />
		<execute action="CPSAMLAdmin#check" locator1="SAML_ENABLED_CHECKBOX" />
		<execute action="CPSAMLAdmin#assertClick" locator1="SAVE_BUTTON" value1="Save" />
		<execute action="CPSAMLAdmin#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>
</definition>