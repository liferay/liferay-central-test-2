	<command name="viewReplyPG">
		<var name="key_threadSubject" value="${threadSubject}" />

		<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />
		<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_STARTED_BY" value1="${userName}" />
		<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_POSTS" value1="${postCount}" />

		<if>
			<equals arg1="${guestReply}" arg2="true" />
			<then>
				<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_LAST_POST" value1="Anonymous" />
				<execute function="#assertClick" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />
			</then>
			<else>
				<execute function="#assertClick" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />
			</else>
		</if>

		<if>
			<equals arg1="${loggedOut}" arg2="true" />
			<then>
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#THREAD_TABLE_SUBJECT_2" value1="RE: ${threadSubject}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_1" value1="${threadSubject}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_BODY_1" value1="${threadBody}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_USERNAME_1" value1="${userName}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_2" value1="RE: ${threadSubject}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_BODY_2" value1="${threadReplyBody}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_USERNAME_2_GUEST" value1="Anonymous" />
			</then>
			<else>
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#THREAD_TABLE_SUBJECT_2" value1="RE: ${threadSubject}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_1" value1="${threadSubject}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_BODY_1" value1="${threadBody}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_USERNAME_1" value1="${userName}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_RATING_1_UPVOTE" value1="0" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_2" value1="RE: ${threadSubject}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_BODY_2" value1="${threadReplyBody}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_USERNAME_2" value1="${userName}" />
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_RATING_2_UPVOTE" value1="0" />
			</else>
		</if>

		<if>
			<equals arg1="${guestReply}" arg2="false" />
			<then>
				<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_USERNAME_2" value1="${userName}" />
			</then>
		</if>

		<if>
			<isset var="mbThreadAttachment" />
			<then>
				<var name="key_mbThreadAttachment" value="${mbThreadAttachment}" />

				<execute function="#assertElementPresent" locator1="PGMessageboardsThread#MESSAGE_ATTACHMENT_IMAGE" />
			</then>
		</if>
	</command>

	<command name="viewSplitThreadPG">
		<var name="key_threadSubject" value="${threadSubject}" />

		<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />
		<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_POSTS" value1="2" />
		<execute function="#assertClick" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />

		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#TITLE_HEADER" value1="${threadSubject}" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_1" value1="${threadSubject}" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_BODY_1" value1="${threadBody}" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_2" value1="${threadSplitReplySubject}" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_BODY_2" value1="${threadSplitReplyBody}" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<var name="key_threadSubject" value="${threadSplitSubject}" />

		<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSplitSubject}" />
		<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_POSTS" value1="1" />
		<execute function="#assertClick" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSplitSubject}" />

		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#TITLE_HEADER" value1="${threadSplitSubject}" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_1" value1="${threadSplitSubject}" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_BODY_1" value1="${threadReplyBody}" />
		<execute function="#assertElementNotPresent" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_2" />
		<execute function="#assertElementNotPresent" locator1="PGMessageboardsThread#MESSAGE_BODY_2" />
