		</if>

		<execute function="#assertTextEquals" locator1="CPMessageboardsThread#MESSAGE_USERNAME_2" value1="${userName2}" />
		<execute function="#assertTextEquals" locator1="CPMessageboardsThread#MESSAGE_SUBJECT_2" value1="RE: ${threadSubject}" />
		<execute function="#assertTextEquals" locator1="CPMessageboardsThread#MESSAGE_BODY_2" value1="${threadBody2}" />
