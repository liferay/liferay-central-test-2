<definition>
	<var name="assetType" value="Message Boards Thread" />
	<var name="userName" value="Test Test" />

	<command name="addCP">
		<execute function="#assertClick" locator1="CPMessageboards#POST_NEW_THREAD_BUTTON" value1="Post New Thread" />

		<execute function="#type" locator1="CPMessageboardsPostthread#SUBJECT_FIELD" value1="${threadSubject}" />
		<execute function="#type" locator1="CPMessageboardsPostthread#BODY_FIELD" value1="${threadBody}" />
		<execute function="#assertClick" locator1="CPMessageboardsPostthread#PUBLISH_BUTTON" value1="Publish" />

		<execute function="#assertTextEquals" locator1="CPMessageboardsThread#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="addCPWithAttachment">
		<execute function="#assertClick" locator1="CPMessageboards#POST_NEW_THREAD_BUTTON" value1="Post New Thread" />

		<execute function="#type" locator1="CPMessageboardsPostthread#SUBJECT_FIELD" value1="${threadSubject}" />
		<execute function="#type" locator1="CPMessageboardsPostthread#BODY_FIELD" value1="${threadBody}" />

		<if>
			<condition function="#isElementPresent" locator1="CPMessageboardsPostthread#ATTACHMENTS_BROWSE_FIELD" />
			<then>
				<execute function="#click" locator1="CPMessageboardsPostthread#ATTACHMENTS_DROPDOWN" />
			</then>
		</if>

		<execute function="#uploadCommonFile" locator1="CPMessageboardsPostthread#ATTACHMENTS_BROWSE_FIELD" value1="${mbAttachmentFile}" />
		<execute function="#assertClick" locator1="CPMessageboardsPostthread#PUBLISH_BUTTON" value1="Publish" />

		<execute function="#assertTextEquals" locator1="CPMessageboardsThread#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="addInvalidAttachmentPG">
		<execute function="#click" locator1="PGMessageboards#POST_NEW_THREAD_BUTTON" />

		<execute function="#type" locator1="PGMessageboardsPostthread#SUBJECT_FIELD" value1="${threadSubject}" />

		<if>
			<condition function="#isElementPresent" locator1="PGMessageboardsPostthread#ATTACHMENTS_DROPDOWN_COLLAPSED" />
			<then>
				<execute function="#assertClick" locator1="PGMessageboardsPostthread#ATTACHMENTS_DROPDOWN" value1="Attachments" />
			</then>
		</if>

		<execute function="#uploadCommonFile" locator1="PGMessageboardsPostthread#ATTACHMENTS_FILE_FIELD_1" value1="${mbThreadAttachment}" />
		<execute function="#assertClick" locator1="PGMessageboardsPostthread#PUBLISH_BUTTON" value1="Publish" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsPostthread#ERROR_MESSAGE_1" value1="Your request failed to complete." />

		<if>
			<equals arg1="${invalidSize}" arg2="true" />
			<then>
				<execute function="#assertTextEquals" locator1="PGMessageboardsPostthread#ERROR_MESSAGE_2" value1="Please enter a file with a valid file size no larger than ${maxAttachmentFileSize}KB." />
			</then>
		</if>
	</command>

	<command name="addPG">
		<execute function="#click" locator1="PGMessageboards#POST_NEW_THREAD_BUTTON" />

		<execute function="#type" locator1="PGMessageboardsPostthread#SUBJECT_FIELD" value1="${threadSubject}" />

		<if>
			<isset var="source" />
			<then>
				<execute function="#click" locator1="PGMessageboardsPostthread#SOURCE_BUTTON" />
				<execute function="#type" locator1="PGMessageboardsPostthread#BODY_FIELD_SOURCE_ON" value1="${threadBody}" />
				<execute function="#click" locator1="PGMessageboardsPostthread#SOURCE_BUTTON" />

				<if>
					<isset var="fontSize" />
					<then>
						<var name="key_fontSize" value="${fontSize}" />

						<execute function="#assertClick" locator1="PGMessageboardsPostthread#FONT_SIZE_DROPDOWN" value1="Size" />
						<execute function="#assertTextEquals" locator1="PGMessageboardsPostthread#FONT_SIZE_DROPDOWN_SELECT" value1="${key_fontSize}" />
					</then>
				</if>
			</then>
			<else>
				<execute function="#type" locator1="PGMessageboardsPostthread#BODY_FIELD" value1="${threadBody}" />
			</else>
		</if>

		<if>
			<equals arg1="${markAsQuestion}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGMessageboardsPostthread#MARK_AS_A_QUESTION_CHECKBOX" />
			</then>
		</if>

		<if>
			<equals arg1="${anonymous}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGMessageboardsPostthread#ANONYMOUS_CHECKBOX" />
			</then>
		</if>

		<if>
			<equals arg1="${priority}" arg2="true" />
			<then>
				<execute function="#select" locator1="PGMessageboardsPostthread#PRIORITY_SELECT" value1="${threadPriority}" />
			</then>
		</if>

		<if>
			<equals arg1="${source}" arg2="true" />
			<then>
				<execute function="#click" locator1="PGMessageboardsPostthread#SOURCE_BUTTON" />
				<execute function="#type" locator1="PGMessageboardsPostthread#BODY_FIELD_SOURCE_ON" value1="${threadBody}" />
				<execute function="#click" locator1="PGMessageboardsPostthread#SOURCE_BUTTON" />

				<if>
					<isset var="fontSize" />
					<then>
						<var name="key_fontSize" value="${fontSize}" />

						<execute function="#assertClick" locator1="PGMessageboardsPostthread#FONT_SIZE_DROPDOWN" value1="Size" />
						<execute function="#assertTextEquals" locator1="PGMessageboardsPostthread#FONT_SIZE_DROPDOWN_SELECT" value1="${key_fontSize}" />
					</then>
				</if>
			</then>
			<else>
				<execute function="#type" locator1="PGMessageboardsPostthread#BODY_FIELD" value1="${threadBody}" />
			</else>
		</if>

		<if>
			<equals arg1="${viewableBy}" arg2="true" />
			<then>
				<execute function="#select" locator1="PGMessageboardsPostthread#PERMISSIONS_VIEWABLE_BY_DROPDOWN" value1="${viewableBySelection}" />
			</then>
		</if>

		<if>
			<isset var="mbThreadAttachment" />
			<then>
				<if>
					<condition function="#isElementPresent" locator1="PGMessageboardsPostthread#ATTACHMENTS_DROPDOWN_COLLAPSED" />
					<then>
						<execute function="#assertClick" locator1="PGMessageboardsPostthread#ATTACHMENTS_DROPDOWN" value1="Attachments" />
					</then>
				</if>

				<execute function="#uploadCommonFile" locator1="PGMessageboardsPostthread#ATTACHMENTS_FILE_FIELD_1" value1="${mbThreadAttachment}" />
			</then>
		</if>

		<if>
			<equals arg1="${threadAddTag}" arg2="true" />
			<then>
				<execute macro="MessageboardsThread#addTagPGCmd" />
			</then>
		</if>

		<if>
			<equals arg1="${saveAsDraft}" arg2="true" />
			<then>
				<execute function="#assertClick" locator1="PGMessageboardsPostthread#SAVE_AS_DRAFT_BUTTON" value1="Save as Draft" />
			</then>
			<elseif>
				<equals arg1="${preview}" arg2="true" />
				<then>
					<execute function="#assertClick" locator1="PGMessageboardsPostthread#PREVIEW_BUTTON" value1="Preview" />

					<var name="key_threadSubject" value="${threadSubject}" />

					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#TITLE_HEADER" value1="Edit ${threadSubject}" />
					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_USERNAME_1" value1="${userName}" />
					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_1" value1="${threadSubject}" />
					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_WORKFLOW_STATUS_1" value1="Draft" />
					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_BODY_1" value1="${threadBody}" />
				</then>
			</elseif>
			<else>
				<execute function="#assertClick" locator1="PGMessageboardsPostthread#PUBLISH_BUTTON" value1="Publish" />
			</else>
		</if>

		<execute function="#assertTextEquals" locator1="PGMessageboards#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="addTagPGCmd">
		<execute function="#assertTextEquals" locator1="PGMessageboardsPostthread#SUBJECT_FIELD" value1="${threadSubject}" />
		<execute function="#assertElementPresent" locator1="PGMessageboardsPostthread#BODY_FIELD" />

		<if>
			<condition function="#isElementNotPresent" locator1="PGMessageboardsPostthread#CATEGORIZATION_TAGS_ADD_BUTTON" />
			<then>
				<execute function="#assertClick" locator1="PGMessageboardsPostthread#CATEGORIZATION_TOGGLE" value1="Categorization" />
				<execute function="#assertElementPresent" locator1="PGMessageboardsPostthread#CATEGORIZATION_TAGS_ADD_BUTTON" />
			</then>
		</if>

		<if>
			<isset var="tagNameList" />
			<then>
				<for list="${tagNameList}" param="tagName">
					<execute function="#type" locator1="PGMessageboardsPostthread#CATEGORIZATION_TAGS_FIELD" value1="${tagName}" />
					<execute function="#assertClick" locator1="PGMessageboardsPostthread#CATEGORIZATION_TAGS_ADD_BUTTON" value1="Add" />
				</for>
			</then>
			<else>
				<var name="key_tagName" value="${tagName}" />

				<execute function="#type" locator1="PGMessageboardsPostthread#CATEGORIZATION_TAGS_FIELD" value1="${tagName}" />
				<execute function="#assertClick" locator1="PGMessageboardsPostthread#CATEGORIZATION_TAGS_ADD_BUTTON" value1="Add" />
				<execute function="#assertElementPresent" locator1="PGMessageboardsPostthread#CATEGORIZATION_TAG" value1="${tagName}" />
			</else>
		</if>
	</command>

	<command name="addWithWorkflowCP">
		<execute function="#assertClick" locator1="CPMessageboards#POST_NEW_THREAD_BUTTON" value1="Post New Thread" />

		<execute function="#type" locator1="CPMessageboardsPostthread#SUBJECT_FIELD" value1="${threadSubject}" />
		<execute function="#type" locator1="CPMessageboardsPostthread#BODY_FIELD" value1="${threadBody}" />
		<execute function="#click" locator1="CPMessageboardsPostthread#SUBMIT_FOR_PUBLICATION_BUTTON" />

		<execute function="#assertTextEquals" locator1="CPMessageboardsThread#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="addWithWorkflowPG">
		<execute function="#click" locator1="PGMessageboards#POST_NEW_THREAD_BUTTON" />

		<execute function="#type" locator1="PGMessageboardsPostthread#SUBJECT_FIELD" value1="${threadSubject}" />
		<execute function="#type" locator1="PGMessageboardsPostthread#BODY_FIELD" value1="${threadBody}" />
		<execute function="#click" locator1="PGMessageboardsPostthread#SUBMIT_FOR_PUBLICATION_BUTTON" />

		<execute function="#assertTextEquals" locator1="PGMessageboards#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="assertAlertNotPresent">
		<execute function="#assertAlertNotPresent" />
	</command>

	<command name="banUser">
		<var name="key_userName" value="${userName}" />

		<if>
			<condition function="#isNotVisible" locator1="PGMessageboardsThread#MESSAGE_USER_DETAILS" />
			<then>
				<execute function="#makeVisible" locator1="PGMessageboardsThread#MESSAGE_USER_DETAILS" />
			</then>
		</if>

		<execute function="#assertClick" locator1="PGMessageboardsThread#MESSAGE_BAN_THIS_USER" value1="Ban This User" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="deletePG">
		<var name="key_threadSubject" value="${threadSubject}" />

		<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />
		<execute function="#click" locator1="PGMessageboards#THREAD_TABLE_ACTIONS" />
		<execute function="#click" locator1="PGMessageboards#THREAD_MENULIST_RECYCLE_BIN" />
		<execute function="#assertTextEquals" locator1="PGMessageboards#SUCCESS_MESSAGE_RECYCLE_BIN" value1="The ${assetType} ${threadSubject} was moved to the Recycle Bin. Undo" />
		<execute function="#assertElementNotPresent" locator1="PGMessageboards#THREAD_TABLE_THREAD" />

		<execute macro="RecycleBin#emptyCP" />
	</command>

	<command name="editCP">
		<if>
			<condition function="#isElementNotPresent" locator1="CPMessageboardsThread#MESSAGE_EDIT_1" />
			<then>
				<execute function="#makeVisible" locator1="CPMessageboardsThread#MESSAGE_EDIT_1" value1="Edit" />
				<execute function="#assertClick" locator1="CPMessageboardsThread#MESSAGE_EDIT_1" value1="Edit" />
			</then>
			<else>
				<execute function="#assertClick" locator1="CPMessageboardsThread#MESSAGE_EDIT_1" value1="Edit" />
			</else>
		</if>

		<if>
			<equals arg1="${threadAttachmentRemove}" arg2="true" />
			<then>
				<if>
					<condition function="#isNotVisible" locator1="CPMessageboardsPostthread#ATTACHMENTS_REMOVE_LINK" />
					<then>
						<execute function="#click" locator1="CPMessageboardsPostthread#ATTACHMENTS_DROPDOWN" />
					</then>
				</if>

				<execute function="#assertTextEquals" locator1="CPMessageboardsPostthread#ATTACHMENTS_NAME" value1="${mbAttachmentFile}" />
				<execute function="#assertClick" locator1="CPMessageboardsPostthread#ATTACHMENTS_REMOVE_LINK" value1="Remove" />
			</then>
		</if>

		<if>
			<isset var="threadSubjectEdit" />
			<then>
				<execute function="#type" locator1="CPMessageboardsPostthread#SUBJECT_FIELD" value1="${threadSubjectEdit}" />
			</then>
		</if>

		<if>
			<isset var="threadBodyEdit" />
			<then>
				<execute function="#type" locator1="CPMessageboardsPostthread#BODY_FIELD" value1="${threadBodyEdit}" />
			</then>
		</if>

		<execute function="#assertClick" locator1="CPMessageboardsPostthread#PUBLISH_BUTTON" value1="Publish" />

		<execute function="#assertTextEquals" locator1="CPMessageboards#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="editPG">
		<execute function="#assertClick" locator1="PGMessageboardsThread#MESSAGE_EDIT_1" value1="Edit" />

		<if>
			<isset var="threadSubjectEdit" />
			<then>
				<execute function="#type" locator1="PGMessageboardsPostthread#SUBJECT_FIELD" value1="${threadSubjectEdit}" />
			</then>
		</if>

		<if>
			<isset var="threadBodyEdit" />
			<then>
				<execute function="#type" locator1="PGMessageboardsPostthread#BODY_FIELD" value1="${threadBodyEdit}" />
			</then>
		</if>

		<if>
			<equals arg1="${saveAsDraft}" arg2="true" />
			<then>
				<execute function="#assertClick" locator1="PGMessageboardsPostthread#SAVE_AS_DRAFT_BUTTON" value1="Save as Draft" />
			</then>
			<elseif>
				<equals arg1="${preview}" arg2="true" />
				<then>
					<execute function="#assertClickNoError" locator1="PGMessageboardsPostthread#PREVIEW_BUTTON" value1="Preview" />
					<execute function="#confirm" locator1="PGMessageboardsPostthread#CONFIRMATION" value1="In order to preview your changes, the message will be saved as a draft and other users may not be able to see it. Are you sure you want to do this?" />

					<var name="key_threadSubject" value="${threadSubject}" />

					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#TITLE_HEADER" value1="Edit ${threadSubject}" />
					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_USERNAME_1" value1="${userName}" />
					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_SUBJECT_1" value1="${threadSubject}" />
					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_WORKFLOW_STATUS_1" value1="Draft" />
					<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_BODY_1" value1="${threadBodyEdit}" />
				</then>
			</elseif>
			<else>
				<execute function="#assertClick" locator1="PGMessageboardsPostthread#PUBLISH_BUTTON" value1="Publish" />
			</else>
		</if>

		<execute function="#assertTextEquals" locator1="PGMessageboards#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="editViaMyPosts">
		<execute function="#assertClick" locator1="PGMessageboards#NAVIGATION_MY_POSTS" value1="My Posts" />

		<var name="key_threadSubject" value="${threadSubject}" />

		<if>
			<equals arg1="threadSubjectEdit" arg2="true" />
			<then>
				<var name="key_threadSubject" value="${threadSubjectEdit}" />
			</then>
		</if>

		<execute function="#assertTextEquals" locator1="PGMessageboardsMyposts#THREAD_TABLE_THREAD" value1="${threadSubject}" />
		<execute function="#click" locator1="PGMessageboardsMyposts#THREAD_TABLE_ACTIONS" />
		<execute function="#assertClick" locator1="PGMessageboardsMyposts#THREAD_MENULIST_EDIT" value1="Edit" />

		<execute function="#assertClick" locator1="PGMessageboardsPostthread#PUBLISH_BUTTON" value1="Publish" />
		<execute function="#assertTextEquals" locator1="PGMessageboards#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="flagPG">
		<execute function="#assertClick" locator1="PGMessageboardsThread#MESSAGE_FLAG_1" value1="Flag" />

		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#REPORT_INAPPROPRIATE_CONTENT_HEADER" value1="Report Inappropriate Content" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#REPORT_INAPPROPRIATE_CONTENT_WARNING" value1="You are about to report a violation of our Terms of Use. All reports are strictly confidential." />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#REPORT_INAPPROPRIATE_CONTENT_WARNING_TERMS_OF_USE_LINK" value1="Terms of Use" />
		<execute function="#select" locator1="PGMessageboardsThread#REPORT_INAPPROPRIATE_CONTENT_REASON_SELECT" value1="${flagReason}" />
		<execute function="#assertClick" locator1="PGMessageboardsThread#REPORT_INAPPROPRIATE_CONTENT_SAVE_BUTTON" value1="Save" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#REPORT_INAPPROPRIATE_CONTENT_SUCCESS_MESSAGE" value1="Although we cannot disclose our final decision, we do review every report and appreciate your effort to make sure Liferay is a safe environment for everyone." />
		<execute function="#click" locator1="PGMessageboardsThread#REPORT_INAPPROPRIATE_CONTENT_CLOSE_BUTTON" />
	</command>

	<command name="gotoCP">
		<var name="key_threadSubject" value="${threadSubject}" />

		<execute function="#assertClick" locator1="CPMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />
	</command>

	<command name="gotoPG">
		<var name="key_threadSubject" value="${threadSubject}" />

		<if>
			<isset var="messageBoardsThreadURL" />
			<then>
				<var method="selenium#getLocation()" name="currentURL" />

				<execute macro="TestUtils#assertEquals">
					<var name="actual" value="${currentURL}" />
					<var name="expected" value="${messageBoardsThreadURL}" />
				</execute>
			</then>
			<else>
				<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />
				<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_STARTED_BY" value1="${startedByUserName}" />
				<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_POSTS" value1="${postCount}" />
				<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_LAST_POST" value1="${lastPostUserName}" />
				<execute function="#click" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />
			</else>
		</if>
	</command>

	<command name="lockPG">
		<var name="key_threadSubject" value="${threadSubject}" />

		<execute function="#assertTextEquals" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />
		<execute function="#click" locator1="PGMessageboards#THREAD_TABLE_THREAD" value1="${threadSubject}" />

		<execute function="#assertClick" locator1="PGMessageboardsThread#THREAD_ACTIONS_LOCK_THREAD" value1="Lock Thread" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="markAsAnswerCP">
		<execute function="#assertClick" locator1="CPMessageboardsThread#MESSAGE_MARK_AS_AN_ANSWER_1" value1="Mark as an Answer" />

		<execute function="#assertTextEquals" locator1="CPMessageboardsThread#MESSAGE_ANSWER_1" value1="Answer" />
	</command>

	<command name="markAsAnswerPG">
		<execute function="#assertClick" locator1="PGMessageboardsThread#MESSAGE_MARK_AS_AN_ANSWER_1" value1="Mark as an Answer" />

		<execute function="#assertTextEquals" locator1="PGMessageboardsThread#MESSAGE_ANSWER_1" value1="Answer" />
	</command>

	<command name="movePG">
		<var name="key_threadSubject" value="${threadSubject}" />

		<if>
			<equals arg1="${categoryDescriptionEnabled}" arg2="true" />
			<then>
				<var name="key_categoryDescription" value="${categoryDescription}" />

				<execute function="#assertClick" locator1="PGMessageboards#CATEGORY_TABLE_CATEGORY_DESCRIPTION" value1="${categoryDescription}" />
			</then>
			<else>
				<var name="key_categoryName" value="${categoryName1}" />

				<execute function="#assertClick" locator1="PGMessageboards#CATEGORY_TABLE_CATEGORY" value1="${categoryName1}" />
			</else>
		</if>

		<execute function="#click" locator1="PGMessageboardsCategory#THREAD_TABLE_ACTIONS_GENERIC" />
		<execute function="#assertClick" locator1="PGMessageboardsCategory#THREAD_MENULIST_MOVE" value1="Move" />

		<execute function="#assertClick" locator1="PGMessageboardsMovethread#SELECT_BUTTON" value1="Select" />

		<execute function="#selectFrame" locator1="PGMessageboardsMovethreadSelectcategory#SELECT_CATEGORY_IFRAME" />

		<var name="key_categoryName" value="${categoryName2}" />

		<execute function="#assertClick" locator1="PGMessageboardsMovethreadSelectcategory#CATEGORY_TABLE_CHOOSE_BUTTON_2" value1="Choose" />

		<if>
			<equals arg1="${explanationPost}" arg2="true" />
			<then>
				<execute function="#selectFrame" value1="relative=top" />
				<execute function="#assertElementPresent" locator1="PGMessageboardsMovethread#CATEGORY_FIELD" />
				<execute function="#check" locator1="PGMessageboardsMovethread#ADD_EXPLANATION_POST_CHECKBOX" />
				<execute function="#type" locator1="PGMessageboardsMovethread#ADD_EXPLANATION_POST_SUBJECT_FIELD" value1="${explanationSubject}" />
				<execute function="#type" locator1="PGMessageboardsMovethread#ADD_EXPLANATION_POST_BODY_FIELD" value1="${explanationBody}" />
			</then>
		</if>

		<execute function="#selectFrame" value1="relative=top" />
		<execute function="#assertElementPresent" locator1="PGMessageboardsMovethread#CATEGORY_FIELD" />
		<execute function="#assertClick" locator1="PGMessageboardsMovethread#MOVE_THREAD_BUTTON" value1="Move Thread" />
	</command>

	<command name="moveToHomePG">
		<var name="key_threadSubject" value="${threadSubject}" />

		<if>
			<equals arg1="${categoryDescriptionEnabled}" arg2="true" />
			<then>
				<var name="key_categoryDescription" value="${categoryDescription}" />

				<execute function="#assertClick" locator1="PGMessageboards#CATEGORY_TABLE_CATEGORY_DESCRIPTION" value1="${categoryDescription}" />
			</then>
			<else>
				<var name="key_categoryName" value="${categoryName}" />

				<execute function="#assertClick" locator1="PGMessageboards#CATEGORY_TABLE_CATEGORY" value1="${categoryName}" />
			</else>
		</if>

		<execute function="#assertClick" locator1="PGMessageboardsCategory#THREAD_TABLE_ACTIONS_GENERIC" value1="Actions" />
		<execute function="#assertClick" locator1="PGMessageboardsCategory#THREAD_MENULIST_MOVE" value1="Move" />

		<execute function="#assertClick" locator1="PGMessageboardsMovethread#SELECT_BUTTON" value1="Select" />

		<execute function="#selectFrame" locator1="PGMessageboardsMovethreadSelectcategory#SELECT_CATEGORY_IFRAME" />

		<if>
			<condition function="#isElementPresent" locator1="PGMessageboardsMovethreadSelectcategory#CATEGORIES_LINK" />
			<then>
				<execute function="#assertClick" locator1="PGMessageboardsMovethreadSelectcategory#CATEGORIES_LINK" value1="Categories" />
			</then>
		</if>

		<execute function="#assertClick" locator1="PGMessageboardsMovethreadSelectcategory#CHOOSE_THIS_CATEGORY_BUTTON" value1="Choose This Category" />

		<if>
			<equals arg1="${explanationPost}" arg2="true" />
			<then>
				<execute function="#selectFrame" value1="relative=top" />
				<execute function="#assertElementPresent" locator1="PGMessageboardsMovethread#CATEGORY_FIELD" />
				<execute function="#check" locator1="PGMessageboardsMovethread#ADD_EXPLANATION_POST_CHECKBOX" />
				<execute function="#type" locator1="PGMessageboardsMovethread#ADD_EXPLANATION_POST_SUBJECT_FIELD" value1="${explanationSubject}" />
