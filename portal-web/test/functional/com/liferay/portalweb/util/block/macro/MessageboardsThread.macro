				<execute function="#assertClick" locator1="PGMessageboardsStatistics#GENERAL_DROPDOWN" value1="General" />
			</then>
		</if>

		<execute function="#assertTextEquals" locator1="PGMessageboardsStatistics#GENERAL_NUMBER_OF_CATEGORIES" value1="0" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsStatistics#GENERAL_NUMBER_OF_POSTS" value1="0" />
		<execute function="#assertTextEquals" locator1="PGMessageboardsStatistics#GENERAL_NUMBER_OF_PARTICIPANTS" value1="0" />
