<definition>
	<command name="configureUserSegmentMatchedPG">
		<if>
			<isset var="checkUserSegmentMatchedList" />
			<then>
				<for list="${checkUserSegmentMatchedList}" param="userSegmentMatched">
					<var name="key_userSegmentMatched" value="${userSegmentMatched}" />

					<execute action="PGContentTargetingSimulator#check" locator1="USER_SEGMENTS_MATCHED_CHECKBOX" />
				</for>
			</then>
		</if>

		<if>
			<isset var="uncheckUserSegmentMatchedList" />
			<then>
				<for list="${uncheckUserSegmentMatchedList}" param="userSegmentMatched">
					<var name="key_userSegmentMatched" value="${userSegmentMatched}" />

					<execute action="PGContentTargetingSimulator#uncheck" locator1="USER_SEGMENTS_MATCHED_CHECKBOX" />
				</for>
			</then>
		</if>
	</command>

	<command name="configureUserSegmentOtherPG">
		<if>
			<isset var="checkUserSegmentOtherList" />
			<then>
				<for list="${checkUserSegmentOtherList}" param="userSegmentOther">
					<var name="key_userSegmentOther" value="${userSegmentOther}" />

					<execute action="PGContentTargetingSimulator#check" locator1="USER_SEGMENTS_OTHER_CHECKBOX" />
				</for>
			</then>
		</if>

		<if>
			<isset var="uncheckUserSegmentOtherList" />
			<then>
				<for list="${uncheckUserSegmentOtherList}" param="userSegmentOther">
					<var name="key_userSegmentOther" value="${userSegmentOther}" />

					<execute action="PGContentTargetingSimulator#uncheck" locator1="USER_SEGMENTS_OTHER_CHECKBOX" />
				</for>
			</then>
		</if>
	</command>

	<command name="gotoPG">
		<execute action="PGContentTargetingSimulator#click" locator1="DOCKBAR_SIMULATOR_BUTTON" />
	</command >

	<command name="simulateUserSegmentPG">
		<if>
			<equals arg1="${simulationbutton}" arg2="Simulate" />
			<then>
				<execute action="PGContentTargetingSimulator#assertClick" locator1="SIMULATE_BUTTON" value1="Simulate" />
			</then>
			<elseif>
				<equals arg1="${simulationbutton}" arg2="Stop Simulation" />
				<then>
					<execute action="PGContentTargetingSimulator#assertClick" locator1="STOP_SIMULATION_BUTTON" value1="Stop Simulation" />
				</then>
			</elseif>
		</if>
	</command>

	<command name="viewCampaignsViaSimulatorPG">
		<execute action="PGContentTargetingSimulator#assertClick" locator1="SIMULATOR_CAMPAIGNS_NAVIGATION" value1="Campaigns" />

		<for list="${viewCampaignMatched}" param="campaignMatched">
			<var name="key_campaignMatched" value="${campaignMatched}" />

			<execute action="PGContentTargetingSimulator#assertTextEquals" locator1="CAMPAIGNS_MATCHED_LABEL" value1="${campaignMatched}" />
		</for>

		<for list="${viewCampaignOther}" param="campaignOther">
			<var name="key_campaignOther" value="${campaignOther}" />

			<execute action="PGContentTargetingSimulator#assertTextEquals" locator1="CAMPAIGNS_OTHER_LABEL" value1="${campaignOther}" />
		</for>
	</command>

	<command name="viewUserSegmentsViaSimulatorPG">
		<execute action="PGContentTargetingSimulator#assertClick" locator1="SIMULATOR_USER_SEGMENTS_NAVIGATION" value1="User Segments" />

		<for list="${viewUserSegmentMatched}" param="userSegmentMatched">
			<var name="key_userSegmentMatched" value="${userSegmentMatched}" />

			<execute action="PGContentTargetingSimulator#assertTextEquals" locator1="USER_SEGMENTS_MATCHED_LABEL" value1="${userSegmentMatched}" />
			<execute action="PGContentTargetingSimulator#assertChecked" locator1="USER_SEGMENTS_MATCHED_CHECKBOX" />
		</for>

		<for list="${viewUserSegmentOther}" param="userSegmentOther">
			<var name="key_userSegmentOther" value="${userSegmentOther}" />

			<execute action="PGContentTargetingSimulator#assertTextEquals" locator1="USER_SEGMENTS_OTHER_LABEL" value1="${userSegmentOther}" />
			<execute action="PGContentTargetingSimulator#assertNotChecked" locator1="USER_SEGMENTS_OTHER_CHECKBOX" />
		</for>
	</command>
</definition>