		<execute selenium="assertConfirmation" />

		<execute selenium="assertJavaScriptErrors" />

		<execute selenium="assertLiferayErrors" />

		<execute function="WaitForSPARefresh" />
	</command>

	<command name="assertConfirmationNoWait">
		<execute selenium="assertConfirmation" />

		<execute selenium="assertJavaScriptErrors" />

		<execute selenium="assertLiferayErrors" />
	</command>

	<command name="assertPartialConfirmation">
		<execute selenium="assertPartialConfirmation" />

		<execute selenium="assertJavaScriptErrors" />

		<execute selenium="assertLiferayErrors" />

		<execute function="WaitForSPARefresh" />
	</command>

	<command name="assertPrompt" summary="Assert that the confirmation window equals the value '${locator1}' and enter '${value1}' for input">
		<execute selenium="assertPrompt" />

		<execute selenium="assertJavaScriptErrors" />

		<execute selenium="assertLiferayErrors" />

		<execute function="WaitForSPARefresh" />
	</command>

	<command name="waitForConfirmation">
		<execute selenium="waitForConfirmation" />

		<execute selenium="assertJavaScriptErrors" />

		<execute selenium="assertLiferayErrors" />

		<execute function="WaitForSPARefresh" />
	</command>
</definition>