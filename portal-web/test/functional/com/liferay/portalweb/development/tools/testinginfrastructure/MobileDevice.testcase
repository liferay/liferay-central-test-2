<definition component-name="portal-tools">
	<property name="mobile.device.enabled" value="true" />
	<property name="testray.main.component.name" value="Tools" />

	<command name="BrowseGoogle" priority="5">
		<execute action="Home#open" locator1="www.google.com" />

		<execute action="CPSites#pause" locator1="5000" />
	</command>

	<command name="Smoke" priority="5">
		<execute macro="User#firstLoginPG" />
	</command>
</definition>