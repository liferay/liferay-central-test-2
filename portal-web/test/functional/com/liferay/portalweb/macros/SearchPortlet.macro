<definition>
	<command name="configureAdvancedSearchPG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletNameBorderless" value="${portletNameBorderless}" />
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute function="SelectFrame" locator1="BasePortletConfiguration#CONFIGURATION_IFRAME" />

		<execute function="Click" locator1="PGSearchConfiguration#DISPLAY_SETTING_ADVANCED_RADIO" />
		<execute function="Type" locator1="PGSearchConfiguration#DISPLAY_SETTING_ADVANCED_SEARCH_CONFIGURATION" value1="${advancedSearchConfiguration}" />
		<execute function="AssertClick" locator1="PGSearchConfiguration#SAVE_BUTTON" value1="Save" />
		<execute function="SelectFrame" value1="relative=top" />
	</command>

	<command name="configureDisplaySettingsSearchPG">
		<execute macro="SearchPortlet#gotoPortletOptions">
			<var name="searchPortletOption" value="Configuration" />
		</execute>

		<execute function="SelectFrame" locator1="BasePortletConfiguration#CONFIGURATION_IFRAME" />

		<var name="key_searchAssetType" value="${searchAssetType}" />

		<execute function="AssertClick" locator1="SearchConfiguration#SEARCH_PORTLET_TAG_CONFIGURATION" value1="Configure" />

		<execute function="AssertClick" locator1="SearchConfiguration#SEARCH_PORTLET_ASSET_TYPE_TAG_CONFIGURATION" value1="${searchAssetType}" />

		<execute function="AssertClick" locator1="SearchConfiguration#SEARCH_PORTLET_CONFIGURATION_MOVE_TO_AVAILABLE_BUTTON" />

		<execute function="AssertClick" locator1="PGSearchConfiguration#SAVE_BUTTON" value1="Save" />
		<execute function="SelectFrame" value1="relative=top" />
	</command>

	<command name="gotoPortletOptions">
		<var name="key_searchPortletOption" value="${searchPortletOption}" />

		<execute function="AssertClick" locator1="Search#SEARCH_PORTLET_OPTIONS_WRENCH" />

		<execute function="AssertClick" locator1="Search#SEARCH_PORTLET_OPTIONS_MENULIST" value1="${searchPortletOption}" />
	</command>
</definition>