<%
String themeImagesPath = PortalUtil.getCDNHost(request.isSecure()) + theme.getStaticResourcePath() + theme.getImagesPath();
%>

body {
	background: #EEF0F2 !important;
	color: #363636;
	margin: 0 auto;
	padding: 0 !important;
}

#wrapper {
	margin: auto;
	max-width: 960px;
	min-width: 0;
}

#banner {
	min-height: 100px;
}

#banner:after {
	clear: both;
	content: ".";
	display: block;
	height: 0;
	visibility: hidden;
}

#banner .site-name {
	background-image: url(<%= themeDisplay.getPathThemeImages() %>/common/configuration.png);
}

#footer {
	clear: both;
	padding-top: 2em;
}

.aui button.btn {
	vertical-align: super;
}

.connection-messages {
	margin-top: 10px;
}

.properties-text {
	min-height: 200px;
	width: 100%;
}

.form .fieldset {
	margin-bottom: 1em;
}

.fieldset .field-content {
	margin-top: 0;
}

.legend {
	border-bottom: 1px solid #333;
	line-height: 2;
	overflow: hidden;
	padding: 0;
	position: static;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.fieldset-content {
	padding: 1em 10px 0;
}

.fieldset-legend {
	color: #363636;
	padding: 0;
	position: static;
	width: 100%;
}

.field-element {
	display: block;
}

.field-hint {
	float: none;
	font-style: italic;
}

.suffix {
	color: #777;
	font-size: 0.9em;
	font-style: italic;
}

.change-language {
	display: inline-block;
	vertical-align: bottom;
}

.database-options {
	display: block;
	margin-bottom: 1em;
}

.database-values {
	border: 1px solid #CCC;
	margin-left: 0;
	padding: 1em;
}

.database-values dt {
	float: left;
	font-weight: bold;
	margin-right: 1em;
}

.lfr-inline-code {
	background: #FF9;
	color: #555;
	font-family: monospace;
	font-size: 1.2em;
	font-style: normal;
	font-weight: bold;
	padding: 3px;
	word-wrap: break-word;
}

.alert-block .lfr-inline-code {
	background-color: #EEB;
	color: #333;
}

.ie6 #wrapper {
	width: 600px;
}

@media (max-width: 1023px) {
	#banner .site-name {
		font-size: 0.8em;
		margin-left: 0;
	}

	#banner .logo {
		margin-right: 20px;
	}
}

@media (max-width: 767px) {
	.aui #wrapper {
		padding: 1em 1.1em 0;
	}

	.alert {
		margin-top: 11px;
	}

	#banner .site-name {
		float: left;
		font-size: 0.7em;
	}

	.logo {
		float: left;
	}
}