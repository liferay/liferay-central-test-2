<nav class="$nav_css_class navbar site-navigation" id="navigation" role="navigation">
	<div class="navbar-inner">

		<ul class="nav nav-collapse" role="menubar">
			#foreach ($nav_item in $nav_items)
					#set($nav_item_attr_selected="")
					#set($nav_item_caret="")
					#set($nav_item_css_class="lfr-nav-item")
					#set($nav_item_link_css_class="")

				#if ($nav_item.isSelected())
					#set($nav_item_attr_selected="aria-selected='true'")
					#set($nav_item_css_class="$nav_item_css_class selected active")
				#end

				#if ($nav_item.hasChildren())
					#set($nav_item_caret='<b class="icon-caret-down"></b>')
					#set($nav_item_css_class="$nav_item_css_class dropdown")
					#set($nav_item_link_css_class="dropdown-toggle")
				#end

				<li class="$nav_item_css_class" id="layout_$nav_item.getLayoutId()" $nav_item_attr_selected role="presentation">

					#if ($nav_item.hasChildren())
						<a aria-haspopup="true" class="$nav_item_link_css_class" href="$nav_item.getURL()" $nav_item.getTarget() role="menuitem">
							<span>$nav_item.icon() $nav_item.getName() $nav_item_caret</span>
						</a>

						<ul class="dropdown-menu child-menu" role="menu">
							#foreach ($nav_child in $nav_item.getChildren())
								#if ($nav_child.isSelected())
									<li aria-selected="true" class="selected" id="layout_$nav_child.getLayoutId()" role="presentation">
								#else
									<li id="layout_$nav_child.getLayoutId()" role="presentation">
								#end
									<a href="$nav_child.getURL()" $nav_child.getTarget() role="menuitem">$nav_child.getName()</a>
								</li>
							#end
						</ul>
					#else
						<a aria-haspopup="false" class="$nav_item_link_css_class" href="$nav_item.getURL()" $nav_item.getTarget() role="menuitem">
							<span>$nav_item.icon() $nav_item.getName() $nav_item_caret</span>
						</a>
					#end
				</li>
			#end
		</ul>
	</div>
</nav>

<script>
	Liferay.Data.NAV_ITEM_SELECTOR = '.navbar-inner > ul > li';
</script>