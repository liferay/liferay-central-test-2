<aui:select label="Locale" name="languageId">

	<%
	Locale[] locales = LanguageUtil.getAvailableLocales();
	Locale userLocale = Validator.isNotNull(selUser) ? selUser.getLocale() : locale;

	for (Locale curLocale : locales) {
	%>
		<aui:option label="<%= curLocale.getDisplayName(curLocale) %>" lang="<%= LocaleUtil.toW3cLanguageId(curLocale) %>" selected="<%= (userLocale.getLanguage().equals(curLocale.getLanguage()) && userLocale.getCountry().equals(curLocale.getCountry())) %>" value="<%= LocaleUtil.toLanguageId(curLocale) %>" />

	<%
	}
	%>

</aui:select>

<portlet:renderURL var="userDetailsURL" windowState="<%= LiferayWindowState.EXCLUSIVE.toString() %>">
	<portlet:param name="struts_action" value="/users_admin/edit_user_details" />
</portlet:renderURL>

<aui:script sandbox="<%= true %>" use='liferay-portlet-url'>
	var details = $('#<portlet:namespace />details'),
		form = $('#<portlet:namespace />fm'),
		formData,
		select = $('#<portlet:namespace />languageId'),
		userDetailsURL = Liferay.PortletURL.createURL('<%= userDetailsURL %>');

	select.on('change', function(event) {
		formData = form.formToArray();

		userDetailsURL.setParameter('language_id', select.val());

		$.ajax(
			userDetailsURL.toString(),
			{
				complete: function() {
					formData.forEach(function(field) {
						var node = $('#' + field.name);
			 
						if (node) {
							node.val(field.value);
						}
					});
				},
				success: function(responseData) {
					details.html(responseData);
				}
			}
		)
	});
</aui:script>