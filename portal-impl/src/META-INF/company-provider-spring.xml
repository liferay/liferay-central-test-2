<?xml version="1.0"?>

<beans
		default-destroy-method="destroy"
		default-init-method="afterPropertiesSet"
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
		>
	<bean id="com.liferay.portal.service.persistence.impl.CompanyProvider" class="com.liferay.portal.service.persistence.impl.ThreadLocalCompanyProvider" />

	<bean id="com.liferay.portal.service.persistence.impl.CompanyProviderHolder" class="com.liferay.portal.service.persistence.impl.CompanyProviderHolderImpl">
		<property name="companyProvider" ref="com.liferay.portal.service.persistence.impl.CompanyProvider" />
	</bean>
</beans>