        <plugin>
          <groupId>com.mycila</groupId>
          <artifactId>license-maven-plugin</artifactId>
          <version>2.9</version>
          <configuration>
            <header>src/etc/license-template.txt</header>
            <strictCheck>true</strictCheck>
            <encoding>${project.build.sourceEncoding}</encoding>
            <mapping>
              <cva>XML_STYLE</cva>
              <gc>XML_STYLE</gc>
              <jav>JAVADOC_STYLE</jav>
              <jjt>JAVADOC_STYLE</jjt>
              <sch>XML_STYLE</sch>
              <svg>XML_STYLE</svg>
              <svxml>XML_STYLE</svxml>
              <wsdl>XML_STYLE</wsdl>
              <xjb>XML_STYLE</xjb>
              <xslt>XML_STYLE</xslt>
              <xvml>XML_STYLE</xvml>
            </mapping>
            <excludes>
              <exclude>**/NOTICE</exclude>
              <exclude>**/LICENSE</exclude>
              <!-- Certificate file -->
              <exclude>**/*.cer</exclude>
              <!-- CSV files -->
              <exclude>**/*.csv</exclude>
              <!-- Certificate file -->
              <exclude>**/*.der</exclude>
              <!-- Binary word documents -->
              <exclude>**/*.doc*</exclude>
              <!-- Font files -->
              <exclude>**/*.eot</exclude>
              <!-- IntelliJ Idea project files -->
              <exclude>**/*.iml</exclude>
              <!-- JavaCC input files -->
              <exclude>**/*.jj</exclude>
              <!-- JJTree input files -->
              <exclude>**/*.jjt</exclude>
              <!-- Java KeyStore files -->
              <exclude>**/*.jks</exclude>
              <!-- Minified CSS/JS files - usually generated -->
              <exclude>**/*.min.css</exclude>
              <exclude>**/*.min.js</exclude>
              <!-- Open Document file -->
              <exclude>**/*.ods</exclude>
              <!-- OpenType fonts -->
              <exclude>**/*.otf</exclude>
              <!-- Certificate file -->
              <exclude>**/*.p12</exclude>
              <!-- PDF file -->
              <exclude>**/*.pdf</exclude>
              <!-- PMD configuration file -->
              <exclude>**/*.pmd</exclude>
              <!-- Policy file -->
              <exclude>**/*.policy</exclude>
              <!-- Powerpoint files -->
              <exclude>**/*.ppt*</exclude>
              <!-- Binary Flash files -->
              <exclude>**/*.swf</exclude>
              <!-- Files marked as test -->
              <exclude>**/*.test</exclude>
              <!-- TrueType fonts -->
              <exclude>**/*.ttf</exclude>
              <!-- Generic text file -->
              <exclude>**/*.txt</exclude>
              <!-- Wiki source files -->
              <exclude>**/*.wiki</exclude>
              <!-- Font files -->
              <exclude>**/*.woff</exclude>
              <!-- Excel files -->
              <exclude>**/*.xls*</exclude>
            </excludes>
          </configuration>
