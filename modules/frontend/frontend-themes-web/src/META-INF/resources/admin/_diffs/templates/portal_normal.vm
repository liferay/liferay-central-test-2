<!DOCTYPE html>

#parse ($init)

<html class="$root_css_class" dir="#language ("lang.dir")" lang="$w3c_language_id">

<head>
	<title>$the_title - $company_name</title>

	<meta content="initial-scale=1.0, width=device-width" name="viewport" />

	$theme.include($top_head_include)
</head>

<body class="$liferay_product_menu_state $css_class">

#quick_access("#main-content")

$theme.include($body_top_include)

#set ($scope_group = $theme_display.getScopeGroup())

#set ($show_dockbar = ($control_panel_category != "my") || !$getterUtil.getBoolean($propsUtil.get("dockbar.administrative.links.show.in.pop.up")))

<div class="$liferay_product_menu_state lfr-product-menu-panel sidenav-fixed sidenav-menu-slider" id="sidenavSliderId">
	<div class="product-menu sidebar sidebar-inverse sidenav-menu">
		#product_menu()
	</div>
</div>

<div id="wrapper">
	<div id="content-wrapper">
		<div id="content">
			#if ($selectable)
				$theme.include($content_include)
			#else
				$portletDisplay.recycle()

				$portletDisplay.setTitle($the_title)

				$theme.wrapPortlet("portlet.vm", $content_include)
			#end

			<div class="clear"></div>
		</div>
	</div>
</div>

#if ($show_dockbar)
	#control_menu()
#end

$theme.include($body_bottom_include)

$theme.include($bottom_include)

</body>

</html>