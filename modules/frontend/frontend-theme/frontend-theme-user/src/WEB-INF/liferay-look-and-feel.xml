<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<theme id="user-horizontal" name="User Horizontal">
		<images-path>${root-path}/images/user-horizontal-images</images-path>
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="false" key="page-distribution-type" value="horizontal" />
			<setting configurable="false" key="show-maximize-minimize-links" value="true" />
			<setting configurable="true" key="user-card-visible" type="checkbox" value="true" />
		</settings>
		<portlet-decorator id="barebone" name="Barebone">
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="solid" name="Solid">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-solid</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>

	<theme id="user-vertical" name="User Vertical">
		<images-path>${root-path}/images/user-vertical-images</images-path>
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="false" key="page-distribution-type" value="vertical" />
			<setting configurable="false" key="show-maximize-minimize-links" value="true" />
			<setting configurable="true" key="user-card-visible" type="checkbox" value="true" />
		</settings>
		<portlet-decorator id="barebone" name="Barebone">
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="solid" name="Solid">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-solid</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>