<?xml version="1.0"?>

<plugin>
	<name>Liferay Source Formatter</name>
	<description>Liferay Source Formatter</description>
	<groupId>com.liferay</groupId>
	<artifactId>com.liferay.source.formatter</artifactId>
	<version>${Bundle-Version}</version>
	<goalPrefix>liferay</goalPrefix>
	<isolatedRealm>false</isolatedRealm>
	<inheritedByDefault>true</inheritedByDefault>
	<mojos>
		<mojo>
			<goal>format-source</goal>
			<description>Formats Liferay Sources.</description>
			<requiresDirectInvocation>false</requiresDirectInvocation>
			<requiresProject>true</requiresProject>
			<requiresReports>false</requiresReports>
			<aggregator>false</aggregator>
			<requiresOnline>false</requiresOnline>
			<inheritedByDefault>true</inheritedByDefault>
			<implementation>com.liferay.source.formatter.maven.SourceFormatterMojo</implementation>
			<language>java</language>
			<instantiationStrategy>per-lookup</instantiationStrategy>
			<executionStrategy>once-per-session</executionStrategy>
			<parameters>
				<parameter>
					<name>autoFix</name>
					<type>boolean</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
				<parameter>
					<name>baseDir</name>
					<type>java.lang.String</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
				<parameter>
					<name>copyright</name>
					<type>java.lang.String</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
				<parameter>
					<name>fileNames</name>
					<type>java.lang.String</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
				<parameter>
					<name>formatCurrentBranch</name>
					<type>boolean</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
				<parameter>
					<name>formatLatestAuthor</name>
					<type>boolean</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
				<parameter>
					<name>formatLocalChanges</name>
					<type>boolean</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
				<parameter>
					<name>printErrors</name>
					<type>boolean</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
				<parameter>
					<name>throwException</name>
					<type>boolean</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
				<parameter>
					<name>useProperties</name>
					<type>boolean</type>
					<required>false</required>
					<editable>true</editable>
					<description/>
				</parameter>
			</parameters>
		</mojo>
	</mojos>
	<dependencies>
		<dependency>
			<groupId>org.apache.ant</groupId>
			<artifactId>ant</artifactId>
			<version>1.8.2</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
			<version>1.6.1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
			<version>3.0.4</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>jaxen</groupId>
			<artifactId>jaxen</artifactId>
			<version>1.1.1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.thoughtworks.qdox</groupId>
			<artifactId>qdox</artifactId>
			<version>1.12.1</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
</plugin>