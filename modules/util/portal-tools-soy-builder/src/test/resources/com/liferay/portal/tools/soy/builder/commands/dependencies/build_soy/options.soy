{namespace ddm}

/**
 * Defines the delegated template for the options field.
 */
{deltemplate ddm.field autoescape="deprecated-contextual" variant="'options'"}
	{call .options data="all" /}
{/deltemplate}

/**
 * Prints the DDM form options field.
 *
 * @param label
 * @param name
 * @param required
 * @param showLabel
 * @param visible
 */
{template .options}
	<div class="form-group{$visible ? '' : ' hide'} liferay-ddm-form-field-options" data-fieldname="{$name}">
		{if $showLabel}
			<label class="control-label">
				{$label}

				{if $required}
					<span class="icon-asterisk text-warning"></span>
				{/if}
			</label>
		{/if}

		<input name="{$name}" type="hidden" />

		<div class="options"></div>
	</div>
{/template}