<?xml version="1.0"?>

<ivy-module
	version="2.0"
	xmlns:m2="http://ant.apache.org/ivy/maven"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd"
>
	<info module="${plugin.name}" organisation="com.liferay">
		<extends extendType="configurations,description,info" location="${sdk.dir}/ivy.xml" module="com.liferay.sdk" organisation="com.liferay" revision="latest.integration" />
	</info>

	<publications>
		<artifact type="jar" />
		<artifact type="pom" />
		<artifact m2:classifier="sources" />
	</publications>

	<dependencies defaultconf="default">
		<dependency name="commons-io" org="commons-io" rev="2.1" />
		<dependency name="log4j" org="log4j" rev="1.2.17" />
		<dependency conf="default->master" name="dom4j" org="dom4j" rev="1.6.1" />
		<dependency conf="default->master" name="jalopy" org="jalopy" rev="1.5rc3" />
		<dependency conf="default->master" name="jaxen" org="jaxen" rev="1.1.1" />
		<dependency conf="default->master" name="org.freemarker" org="com.liferay" rev="2.3.17.LIFERAY-PATCHED-1" />
		<dependency conf="default->master" name="qdox" org="com.thoughtworks.qdox" rev="1.12.1" />
		<dependency conf="provided->master" name="ant" org="org.apache.ant" rev="1.9.3" />
		<dependency conf="provided->master" name="maven-plugin-api" org="org.apache.maven" rev="3.0.4" />
	</dependencies>
</ivy-module>