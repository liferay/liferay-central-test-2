<?xml version="1.0" ?>

<configuration>
	<property resource="sync.properties" />

	<appender class="ch.qos.logback.core.ConsoleAppender" name="CONSOLE">
		<encoder>
			<charset>UTF-8</charset>

			<pattern>%d{HH:mm:ss.SSS} %p [%t] [%logger{0}:%L] %m%n</pattern>
		</encoder>
	</appender>

	<appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${sync.configuration.directory}/logs/liferay-sync-%d{yyyy-MM-dd}.log</fileNamePattern>

			<maxHistory>9</maxHistory>
		</rollingPolicy>

		<encoder>
			<charset>UTF-8</charset>

			<pattern>%d{HH:mm:ss.SSS} %p [%t] [%logger{0}:%L] %m%n</pattern>
		</encoder>
	</appender>

	<appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="WATCHER-EVENTS-FILE">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${sync.configuration.directory}/logs/watcher-events-%d{yyyy-MM-dd}.log</fileNamePattern>

			<maxHistory>9</maxHistory>
		</rollingPolicy>

		<encoder>
			<charset>UTF-8</charset>

			<pattern>%d{HH:mm:ss.SSS} %m%n</pattern>
		</encoder>
	</appender>

	<logger level="ERROR" name="com.liferay.nativity" />

	<logger level="ERROR" name="org.apache" />

	<logger level="INFO" name="com.j256.ormlite" />

	<logger additivity="false" name="WATCHER-EVENTS">
		<appender-ref ref="WATCHER-EVENTS-FILE" />
	</logger>

	<root level="TRACE">
		<appender-ref ref="FILE" />
	</root>
</configuration>