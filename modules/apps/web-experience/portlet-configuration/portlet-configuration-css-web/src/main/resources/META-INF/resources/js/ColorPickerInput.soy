{namespace ColorPickerInput}

/**
 * Prints the color picker input.
 *
 * @param? color
 * @param? disabled
 * @param? elementClasses
 * @param id
 * @param? inputClasses
 * @param label
 * @param? name
 */
{template .render}
	<div class="form-group{$elementClasses ? ' ' + $elementClasses : ''}">
		<label>
			{$label}
		</label>

		{let $inputAttributes kind="attributes"}
			class="form-control{$inputClasses ? ' ' + $inputClasses : ''}"

			{if $disabled}
				disabled="true"
			{/if}

			id="{$id}"

			{if $name}
				name="{$name}"
			{/if}

			type="text"

			{if $color}
				style="background-color: {$color};"
				value="{$color}"
			{/if}
		{/let}

		<input {$inputAttributes}></input>
	</div>
{/template}