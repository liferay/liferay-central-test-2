<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<social-activity-interpreter-class>com.liferay.microblogs.web.microblogs.social.MicroblogsActivityInterpreter</social-activity-interpreter-class>
		<user-notification-definitions>com/liferay/microblogs/web/microblogs/notifications/microblogs-user-notification-definitions.xml</user-notification-definitions>
		<user-notification-handler-class>com.liferay.microblogs.web.microblogs.notifications.MicroblogsUserNotificationHandler</user-notification-handler-class>
		<asset-renderer-factory>com.liferay.microblogs.web.microblogs.asset.MicroblogsEntryAssetRendererFactory</asset-renderer-factory>
	</portlet>
	<portlet>
		<configuration-action-class>com.liferay.portal.kernel.portlet.DefaultConfigurationAction</configuration-action-class>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>