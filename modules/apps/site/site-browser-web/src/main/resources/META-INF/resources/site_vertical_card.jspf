<%
List<Group> children = group.getChildren(true);

int childrenCount = children.size();

String siteImageURL = group.getLogoURL(themeDisplay, false);
%>

<div role="<%= urlData != null ? "button" : "" %>">
	<c:choose>
		<c:when test="<%= Validator.isNotNull(siteImageURL) %>">
			<liferay-frontend:vertical-card
				cssClass='<%= urlData != null ? "selector-button" : "" %>'
				data="<%= urlData %>"
				imageUrl="<%= siteImageURL %>"
				resultRow="<%= row %>"
				rowChecker="<%= searchContainer.getRowChecker() %>"
				showCheckbox="<%= false %>"
				title="<%= group.getName(locale) %>"
			>
				<liferay-frontend:vertical-card-footer>
					<label class="<%= childrenCount != 0 ? "text-default" : "disabled" %>">
						<liferay-ui:message arguments="<%= String.valueOf(childrenCount) %>" key="x-child-sites" />
					</label>
				</liferay-frontend:vertical-card-footer>
			</liferay-frontend:vertical-card>
		</c:when>
		<c:otherwise>
			<liferay-frontend:icon-vertical-card
				cssClass='<%= urlData != null ? "selector-button" : "" %>'
				data="<%= urlData %>"
				icon="sites"
				resultRow="<%= row %>"
				rowChecker="<%= searchContainer.getRowChecker() %>"
				showCheckbox="<%= false %>"
				title="<%= group.getName(locale) %>"
			>
				<liferay-frontend:vertical-card-footer>
					<label class="<%= childrenCount != 0 ? "text-default" : "disabled" %>">
						<liferay-ui:message arguments="<%= String.valueOf(childrenCount) %>" key="x-child-sites" />
					</label>
				</liferay-frontend:vertical-card-footer>
			</liferay-frontend:icon-vertical-card>
		</c:otherwise>
	</c:choose>
</div>