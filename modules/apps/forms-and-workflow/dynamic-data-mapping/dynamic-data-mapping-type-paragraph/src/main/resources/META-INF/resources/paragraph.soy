{namespace ddm}

/**
 * Prints the DDM form paragraph field.
 *
 * @param label
 * @param name
 * @param text
 * @param visible
 */
{template .paragraph}
	<div class="form-group form-inline{$visible ? '' : ' hide'} liferay-ddm-form-field-paragraph" data-fieldname="{$name}">
		<label class="control-label" for="{$name}">{$label}</label>

		<div>{$text|noAutoescape}</div>
	</div>
{/template}