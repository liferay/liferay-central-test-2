<?xml version="1.0"?>
<!DOCTYPE routes PUBLIC "-//Liferay//DTD Friendly URL Routes 7.0.0//EN" "http://www.liferay.com/dtd/liferay-friendly-url-routes_7_0_0.dtd">

<routes>
	<route>
		<pattern>/com_liferay_journal_content_web_portlet_JournalContentPortlet/{groupId:\d+}/{articleId:[^/]+}</pattern>
		<implicit-parameter name="instanceId">0000</implicit-parameter>
		<implicit-parameter name="p_p_state">maximized</implicit-parameter>
		<implicit-parameter name="struts_action">/journal_content/view</implicit-parameter>
	</route>
	<route>
		<pattern>/{p_p_id}/{groupId:\d+}/{articleId:[^/]+}</pattern>
		<implicit-parameter name="struts_action">/journal_content/view</implicit-parameter>
	</route>
	<route>
		<pattern>/com_liferay_journal_content_web_portlet_JournalContentPortlet/{groupId:\d+}/{articleId:[^/]+}/{ddmTemplateKey:[^/]+}</pattern>
		<implicit-parameter name="instanceId">0000</implicit-parameter>
		<implicit-parameter name="p_p_state">maximized</implicit-parameter>
		<implicit-parameter name="struts_action">/journal_content/view</implicit-parameter>
	</route>
	<route>
		<pattern>/{p_p_id}/{groupId:\d+}/{articleId:[^/]+}/{ddmTemplateKey:[^/]+}</pattern>
		<implicit-parameter name="struts_action">/journal_content/view</implicit-parameter>
	</route>
</routes>