{namespace Templates.Alert}

/**
 * This renders the main element
 * @param body
 * @param dismissible
 * @param id
 * @param spinner
 * @param? elementClasses
 * @param? spinnerClasses
 * @skipUpdates elementClasses
 */
{template .render}
	<div id="{$id}" class="alert alert-dismissible component{$elementClasses ? ' ' + $elementClasses : ''}" role="alert">
		{if $spinner}
			<span class="alert-spinner{$spinnerClasses ? ' ' + $spinnerClasses : ''}"></span>
		{/if}
		<span class="alert-body">
			{if $body}
				{$body}
			{/if}
		</span>
		{if $dismissible}
			<button type="button" class="close" aria-label="Close" data-onclick="toggle">
				<span aria-hidden="true">Ã—</span>
			</button>
		{/if}
	</div>
{/template}