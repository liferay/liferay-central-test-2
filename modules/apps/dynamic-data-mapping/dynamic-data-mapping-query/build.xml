<?xml version="1.0"?>
<!DOCTYPE project>

<project>
	<import file="../../../../tools/sdk/build-common-osgi-plugin.xml" />

	<property name="auto.deploy.dir" value="${liferay.home}/osgi/modules" />

	<target name="build-ddm-form-values-query-parser">
		<delete>
			<fileset
				dir="src/com/liferay/portlet/dynamicdatamapping/query/impl/parser"
				excludes="*.ignore"
				includes="*.*"
			/>
		</delete>

		<path id="antlr.classpath">
			<fileset dir="lib" />
		</path>

		<java
			classname="org.antlr.v4.Tool"
			classpathref="antlr.classpath"
			dir="src/com/liferay/portlet/dynamicdatamapping/query/impl/grammar"
			fork="true"
			maxmemory="1024m"
			newenvironment="true"
		>
			<arg value="-o" />
			<arg value="../parser" />
			<arg value="DDMFormValuesQuery.g" />
		</java>

		<fixcrlf
			includes="*.java"
			javafiles="yes"
			srcdir="src/com/liferay/portlet/dynamicdatamapping/query/impl/parser"
			tab="add"
		/>
	</target>
</project>