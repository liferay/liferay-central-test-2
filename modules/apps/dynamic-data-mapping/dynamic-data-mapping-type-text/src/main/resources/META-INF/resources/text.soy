{namespace ddm}

/**
 * Prints the DDM form text field.
 *
 * @param childElementsHTML
 * @param dir
 * @param displayStyle
 * @param label
 * @param name
 * @param placeholder
 * @param readOnly
 * @param required
 * @param showLabel
 * @param tip
 * @param value
 * @param visible
 */
{template .text}
	<div class="form-group{$visible ? '' : ' hide'} liferay-ddm-form-field-text" data-fieldname="{$name}">
		{if $showLabel}
			<label class="control-label" for="{$name}">
				{$label}

				{if $required}
					<b>*</b>
				{/if}
			</label>
		{/if}

		<div class="input-group-container {if $tip}input-group-default{/if}">
			{if $displayStyle == 'multiline'}
				<textarea class="field form-control" dir="{$dir}" id="{$name}" name="{$name}" placeholder="{$placeholder}" {if $readOnly}readonly{/if} >
					{$value}
				</textarea>
			{else}
				<input class="field form-control" dir="{$dir}" id="{$name}" name="{$name}" placeholder="{$placeholder}" {if $readOnly}readonly{/if} type="text" value="{$value}">
			{/if}

			{if $tip}
				<span class="input-group-addon">
					<span class="input-group-addon-content">
						<a class="help-icon help-icon-default icon-monospaced icon-question" data-original-title="{$tip}" data-toggle="popover" href="javascript:;" title="{$tip}"></a>
					</span>
				</span>
			{/if}
		</div>

		{$childElementsHTML|noAutoescape}
	</div>
{/template}