{namespace ddm}

/**
 * Prints the DDM form text field.
 *
 * @param childElementsHTML
 * @param dir
 * @param label
 * @param name
 * @param value
 */
{template .text}
	<div class="form-group field-wrapper" data-fieldname="{$name}">
		<label class="control-fieldLabel" for="{$name}">
			{$label}
		</label>

		 <input class="field form-control" dir="{$dir}" id="{$name}" name="{$name}" type="text" value="{$value}">

		{$childElementsHTML|noAutoescape}
	</div>
{/template}