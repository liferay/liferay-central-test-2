{namespace ddm}

/**
 * Prints an option.
 *
 * @param option
 */
{template .validationOption}
	<option {$option.status} value="{$option.value}">{$option.label}</option>
{/template}

/**
 * Prints the DDM form validation field.
 *
 * @param label
 * @param name
 * @param required
 * @param typesOptions
 * @param validationsOptions
 * @param value
 * @param visible
 */
{template .validation}
	<link href="/o/ddm-type-validation/validation.css" rel="stylesheet"></link>

	<div class="form-group{$visible ? '' : ' hide'} lfr-ddm-form-field-validation" data-fieldname="{$name}">
		<span class="control-label">
			{$label}

			{if $required}
				<b>*</b>
			{/if}
		</span>

		<div class="row">
			<div class="col-md-6">
				<select class="form-control types-select">
					{foreach $option in $typesOptions}
						{call ddm.validationOption data="all"}
							{param option: $option /}
						{/call}
					{/foreach}
				</select>
			</div>

			<div class="col-md-6">
				<select class="form-control validations-select">
					{foreach $option in $validationsOptions}
						{call ddm.validationOption data="all"}
							{param option: $option /}
						{/call}
					{/foreach}
				</select>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<input class="field form-control parameter-input" placeholder="Contains this text" type="text" />
			</div>

			<div class="col-md-6">
				<input class="field form-control message-input" placeholder="Validation message here" type="text" />
			</div>
		</div>

		<input name="{$name}" type="hidden" value="{$value}" />
	</div>
{/template}