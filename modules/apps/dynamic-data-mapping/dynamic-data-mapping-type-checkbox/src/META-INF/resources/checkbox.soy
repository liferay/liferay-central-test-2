{namespace ddm}

/**
 * Prints the DDM form checkbox field.
 *
 * @param childElementsHTML
 * @param dir
 * @param label
 * @param name
 * @param required
 * @param status
 * @param visible
 */
{template .checkbox}
	<div class="form-group field-wrapper form-inline{$visible ? '' : ' hide'}" data-fieldname="{$name}">
		<label for="{$name}">
			<input class="field" dir="{$dir}" id="{$name}" name="{$name}" type="checkbox" {$status} value="true" />

			&nbsp;{$label}

			{if $required}
				<b>&nbsp;*</b>
			{/if}
		</label>

		{$childElementsHTML|noAutoescape}
	</div>
{/template}