<?xml version="1.0"?>

<archetype-descriptor name="liferay-module-fragment">
	<fileSets>
		<fileSet filtered="true" packaged="true">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true">
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet filtered="true">
			<directory></directory>
			<includes>
				<include>.gitignore</include>
				<include>bnd.bnd</include>
				<include>build.gradle</include>
			</includes>
		</fileSet>
	</fileSets>
	<requiredProperties>
		<requiredProperty key="buildType">
			<defaultValue>maven</defaultValue>
		</requiredProperty>
		<requiredProperty key="hostBundleSymbolicName">
		</requiredProperty>
		<requiredProperty key="hostBundleVersion">
		</requiredProperty>
		<requiredProperty key="projectType">
			<defaultValue>standalone</defaultValue>
		</requiredProperty>
	</requiredProperties>
</archetype-descriptor>