<?xml version="1.0"?>

<ivy-module
	version="2.0"
	xmlns:m2="http://ant.apache.org/ivy/maven"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd"
>
	<info module="${plugin.name}" organisation="com.liferay">
		<extends extendType="configurations,description,info" location="${sdk.dir}/ivy.xml" module="com.liferay.sdk" organisation="com.liferay" revision="latest.integration" />
	</info>

	<publications>
		<artifact type="jar" />
		<artifact type="pom" />
		<artifact m2:classifier="sources" />
	</publications>

	<dependencies defaultconf="default">
		<dependency name="com.liferay.gradle.util" org="com.liferay" rev="1.0.6" />
		<dependency conf="provided->default" name="groovy-all" org="org.codehaus.groovy" rev="2.3.9" />
		<dependency conf="provided->default" name="org.gradle.gradle-base-services" org="com.liferay" rev="2.4" />
		<dependency conf="provided->default" name="org.gradle.gradle-base-services-groovy" org="com.liferay" rev="2.4" />
		<dependency conf="provided->default" name="org.gradle.gradle-core" org="com.liferay" rev="2.4" />
		<dependency conf="provided->default" name="org.gradle.gradle-language-jvm" org="com.liferay" rev="2.4" />
		<dependency conf="provided->default" name="org.gradle.gradle-plugins" org="com.liferay" rev="2.4" />
	</dependencies>
</ivy-module>