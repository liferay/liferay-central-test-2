<?xml version="1.0"?>
<!DOCTYPE project>

<project name="build-app">
	<import file="build-app-module.xml" />

	<pathconvert property="app.releng.dir">
		<filtermapper>
			<replacestring from="modules" to="modules${file.separator}.releng" />
		</filtermapper>

		<path>
			<pathelement location="${basedir}" />
		</path>
	</pathconvert>

	<pathconvert pathsep="," property="app.module.dirs">
		<globmapper from="${modules.dir}${file.separator}*" to="*" />
		<path>
			<dirset dir="${basedir}" excludes="**/*-test">
				<present targetdir="${basedir}">
					<mapper from="*" to="*/bnd.bnd" type="glob" />
				</present>
			</dirset>
		</path>
	</pathconvert>

	<mkdir dir="${app.releng.dir}/dist" />

	<pathconvert property="dist.dir">
		<dirset dir="${app.releng.dir}" includes="dist" />
	</pathconvert>

	<condition property="app.first.version">
		<not>
			<available file="${app.releng.dir}/app.changelog" />
		</not>
	</condition>

	<basename file="${basedir}" property="app.name" />

	<property file="${modules.dir}/../build.properties" />

	<macrodef name="set-artifact-versions-previous-release">
		<attribute name="app.version.previous.release" />

		<sequential>
			<property name="artifact.versions.previous.release" value="${artifacts-@{app.version.previous.release}}" />
		</sequential>
	</macrodef>

	<target name="build-app" depends="dist-module-artifacts,write-app-changelog">
		<delete file="${dist.dir}/ticket.list.tmp" />
	</target>

	<target name="check-app-version">
		<fail message="Please provide a value for the property &quot;app.version&quot; when running this target.">
			<condition>
				<not>
					<isset property="app.version" />
				</not>
			</condition>
		</fail>
	</target>

	<target name="check-stale-artifacts" depends="check-app-version">
		<exec executable="${gradle.wrapper.path}" outputproperty="stale.artifacts.output">
			<arg value="printStaleArtifact" />
			<arg value="-q" />
		</exec>

		<fail message="Stale artifacts detected:${line.separator}${stale.artifacts.output}">
			<condition>
				<not>
					<equals arg1="${stale.artifacts.output}" arg2="" />
				</not>
			</condition>
		</fail>
	</target>

	<target name="clean-app">
		<delete dir="${dist.dir}" />
	</target>

	<target name="dist-module-artifacts" depends="check-stale-artifacts,get-artifact-versions-previous-release">
		<subant target="dist-module-artifact">
			<dirset dir="${modules.dir}" excludes="${build.modules.excludes}" includes="${app.module.dirs}" />
			<property name="app.dir" value="${basedir}" />
			<property name="app.first.version" value="${app.first.version}" />
			<property name="artifact.versions.previous.release" value="${artifact.versions.previous.release}" />
			<property name="dist.dir" value="${dist.dir}" />
		</subant>
	</target>

	<target name="get-app-version-previous-release">
		<loadfile failonerror="false" property="app.version.previous.release" srcfile="${app.releng.dir}/app.changelog">
			<filterchain>
				<linecontains>
					<contains value="# " />
				</linecontains>

				<striplinebreaks />

				<tailfilter lines="1" />

				<tokenfilter>
					<replaceregex pattern="^.*?(\d[\d.]+\d)$" replace="\1" />
				</tokenfilter>
			</filterchain>
		</loadfile>

		<property name="app.version.previous" value="0.0.0" />
	</target>

	<target name="get-artifact-versions-previous-release" depends="get-app-version-previous-release">
		<property file="${app.releng.dir}/app.changelog" />

		<set-artifact-versions-previous-release app.version.previous.release="${app.version.previous.release}" />
	</target>

	<target name="record-app-module-versions" depends="dist-module-artifacts,record-app-ticket-list">
		<pathconvert property="module.versions.list" pathsep=",\${line.separator}&#x0009;">
			<flattenmapper />

			<path>
				<fileset dir="${dist.dir}" includes="*.jar" />
			</path>
		</pathconvert>

		<echo append="true" file="${app.releng.dir}/app.changelog" message="${line.separator}${line.separator}modules-${app.version}=\${line.separator}&#x0009;${module.versions.list}" />
	</target>

	<target name="record-app-ticket-list" depends="dist-module-artifacts">
		<condition property="app.change.log.version.separator" value="" else="${line.separator}${line.separator}">
			<istrue value="${app.first.version}" />
		</condition>

		<echo append="true" file="${app.releng.dir}/app.changelog" message="${app.change.log.version.separator}#${line.separator}" />
		<echo append="true" file="${app.releng.dir}/app.changelog" message="# Liferay App Version ${app.version}${line.separator}" />
		<echo append="true" file="${app.releng.dir}/app.changelog" message="#${line.separator}" />

		<loadfile failonerror="false" property="app.ticket.list" srcfile="${dist.dir}/ticket.list.tmp">
			<filterchain>
				<sortfilter />

				<uniqfilter />
			</filterchain>
		</loadfile>

		<echo append="true" file="${app.releng.dir}/app.changelog" message="${line.separator}change-log-${app.version}=${app.ticket.list}" />
	</target>

	<target name="write-app-changelog" depends="dist-module-artifacts,record-app-module-versions,record-app-ticket-list" />
</project>