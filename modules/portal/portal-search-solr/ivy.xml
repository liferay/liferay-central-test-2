<?xml version="1.0"?>

<ivy-module
	version="2.0"
	xmlns:m2="http://ant.apache.org/ivy/maven"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd"
>
	<info module="solr4-shared" organisation="com.liferay">
		<extends extendType="configurations,description,info" location="${sdk.dir}/ivy.xml" module="com.liferay.sdk" organisation="com.liferay" revision="latest.integration" />
	</info>

	<dependencies defaultconf="default">
		<dependency name="lucene-core" org="org.apache.lucene" rev="5.2.1" />
		<dependency name="lucene-analyzers-common" org="org.apache.lucene" rev="5.2.1" />
		<dependency name="lucene-queries" org="org.apache.lucene" rev="5.2.1" />
		<dependency name="lucene-queryparser" org="org.apache.lucene" rev="5.2.1" />
		<dependency name="lucene-suggest" org="org.apache.lucene" rev="5.2.1" />
		<dependency name="org.osgi.compendium" org="org.osgi" rev="5.0.0" />
		<dependency name="org.osgi.core" org="org.osgi" rev="5.0.0" />
		<dependency name="solr-core" org="org.apache.solr" rev="5.2.1" transitive="false" />
		<dependency name="solr-solrj" org="org.apache.solr" rev="5.2.1" />
	</dependencies>
</ivy-module>