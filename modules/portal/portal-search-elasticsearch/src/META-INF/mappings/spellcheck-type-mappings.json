{
	"SpellCheckDocumentType": {
		"dynamic_templates": [
			{
				"template_": {
					"match": "*",
					"match_mapping_type": "string",
					"mapping": {
						"index": "not_analyzed",
						"index_options": "docs",
						"omit_norms": "yes",
						"type": "string"
					}
				}
			},
			{
				"template_spellCheckWord": {
					"match": "spellCheckWord_*",
					"match_mapping_type": "string",
					"mapping": {
						"index": "analyzed",
						"type": "string"
					}
				}
			}
		],
		"properties": {
			"companyId": {
				"index": "not_analyzed",
				"store": "yes",
				"type": "string"
			},
			"groupId": {
				"index": "not_analyzed",
				"store": "yes",
				"type": "string"
			},
			"priority": {
				"index": "not_analyzed",
				"type": "float"
			},
		  "uid": {
				"index": "not_analyzed",
				"store": "yes",
				"type": "string"
			}
		}
	}
}